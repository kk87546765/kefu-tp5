<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8"/>
    <meta name="renderer" content="webkit">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <meta name="apple-mobile-web-app-status-bar-style" content="black">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="format-detection" content="telephone=no">
    <title>后台管理系统</title>
    <link rel="stylesheet" href="/assets/vendor/layui/css/layui.css"/>
    <link rel="stylesheet" href="/assets/model/common/css/style.css"/>
    <link rel="stylesheet" href="/assets/model/common/css/common.css"/>
    <!--[if lt IE 9]>
    <script src="/assets/model/common/js/html5shiv.min.js"></script>
    <script src="/assets/model/common/js/respond.min.js"></script>
    <![endif]-->
    <style>
        .layui-col-space15 {
            /* margin: -7.5px; */
            margin:-7.5px 0 !important;
        }
    </style>
</head>
<body>
<div style="padding: 12px;"  class="search_wrap">
    <form class="layui-form" action="">
        <div class="layui-inline" style="margin-bottom: 6px;">
            <label class="layui-form-label">游戏: </label>
            <div class="layui-input-inline">
                <select name="game"  lay-filter="game" id="game" lay-search="">
                    <option value="">选择或搜索</option>
                    {% for k, v in gamelist %}
                        <option value="{{ k }}" >{{ v['name'] }}</option>
                    {% endfor %}
                </select>
            </div>
        </div>
        <div class="layui-inline" style="margin-bottom: 6px;">
            <label class="layui-form-label">关键词: </label>
            <div class="layui-input-inline">
                <input type="text" name="keyword" id="keyword" autocomplete="off" class="layui-input" >
            </div>
        </div>
    </form>
</div>
<div class="layui-btn-group demoTable" style="padding: 0 15px;">
    <button class="layui-btn layui-btn-sm" data-type="search">搜索</button>
    <button type="button" id="refresh" class="layui-btn  layui-btn-sm">
        <i class="layui-icon layui-icon-refresh"></i>
    </button>
    <button class="layui-btn layui-btn-sm" data-type="add">添加</button>
    <button type="button" class="layui-btn layui-btn-sm layui-btn-danger" data-type="del"><i class="layui-icon"></i> 批量删除</button>
</div>
<div class="table_wrap" style="padding: 0 15px;">
    <table class="layui-table"  lay-filter="demo" id="demo"></table>
</div>

<script type="text/html" id="barDemo">
    <a class="layui-btn layui-btn layui-btn-xs" lay-event="edit">编辑</a>
    <a class="layui-btn layui-btn-danger layui-btn-xs" lay-event="del">删除</a>
</script>
<script type="text/javascript" src="/assets/vendor/layui/layui.js"></script>
<script>
    var where = {};
    layui.config({
        version: true,
        base: '/assets/model/'
    }).extend({
        common: 'common/js/common',
        search: 'common/js/search',
    }).use(['jquery','common','form','table','laydate'], function(){
        var table   = layui.table,
            laydate = layui.laydate,
            common = layui.common,
            form = layui.form,
            $ = layui.jquery;

        //第一个实例
        table.render({
            elem: '#demo',
            headers:common.getHeader()
            ,height: 'full-150'
            ,url: common.getUrl('sensitive/index') //数据接口
            ,page: true //开启分页
            ,cols: [[ //表头
                {type:'checkbox', minWidth:40, fixed: 'left'}
                ,{field:'id',  width:80, sort: true,title:'ID'}
                ,{field:'game_name', title: '游戏',width:100}
                ,{field:'keyword', title: '关键词', minWidth:200}
                // ,{field:'total', title: '触发次数', minWidth:100}
                ,{field:'status', title: '触发限制', minWidth:100}
                ,{field:'level_min', title: '最低等级', minWidth:100}
                ,{field:'level_max', title: '最高等级', minWidth:100}
                ,{field:'money_min', title: '最低充值', minWidth:100}
                ,{field:'money_max', title: '最高充值', minWidth:100}
                ,{field:'addtime', title: '添加时间', minWidth:100}
                ,{field:'add_user', title: '添加人', minWidth:100}
                ,{minWidth:180, align:'center', toolbar: '#barDemo',title:'操作'}


            ]]

        });


        //监听工具条
        table.on('tool(demo)', function(obj){
            var data = obj.data;
            if(obj.event === 'del'){
                layer.confirm('真的删除行么', function(index){
                    layer.close(index);
                    common.req({
                        url: "sensitive/del",
                        data: { ids: data.id },
                        type: "post",
                        dataType:"json",
                        success:function(res){
                            if( res.code == 0 ){
                                obj.del();
                                layer.msg(res.msg,{icon:1});
                            }else{
                                layer.msg(res.msg,{icon:2});
                            }
                        },
                        error:function(data){
                            layer.alert('错误'+data.msg,{icon:2});
                        }
                    });

                });
            }else if(obj.event === 'edit'){
                layer.open({
                    type: 2,
                    title: "查看聊天信息",
                    maxmin: true,
                    shadeClose: true, //点击遮罩关闭层
                    area: ['90%', '60%'],
                    content: "edit.html?id=" + data.id
                });


            }
        });

        $('.demoTable .layui-btn').on('click', function(){
            var type = $(this).data('type');
            if( type=='add' ){
                //添加
                layer.open({
                    type: 2,
                    title: "添加敏感词",
                    maxmin: true,
                    shadeClose: true, //点击遮罩关闭层
                    area : ['70%' , '70%'],
                    content: "add.html"
                });
            }else if( type=='search' ){
                //搜索
                var game     = $('#game').val(),
                    keyword  = $('#keyword').val();
                table.reload('demo', {
                    method: 'post'
                    ,where: {
                        'game': game,
                        'keyword': keyword
                    }
                    ,page: {
                        curr: 1
                    }
                });
            }else if( type=='del' ){
                var checkStatus = table.checkStatus('idTest')
                    ,data = checkStatus.data;

                if( data.length<=0 ){
                    layer.msg("未选择任何行！",{icon:2});
                    return;
                }
                var ids = [];
                for( var i=0; i<data.length; i++ ){
                    ids.push(data[i]['id']);
                }
                //批量删除
                layer.confirm('真的删除选中行吗？', function(index){
                    layer.close(index);
                    common.req({
                        url: "sensitive/del",
                        data: { ids: ids },
                        type: "post",
                        dataType:"json",
                        success:function(res){
                            if( res.code == 0 ){
                                //删除选中行
                                $('.laytable-cell-checkbox>input:checked').each(function(){
                                    var index = $(this).parents('tr').data('index');
                                    $(".layui-table-body tr[data-index='"+index+"']").remove();
                                });
                                layer.msg(res.msg,{icon:1});
                            }else{
                                layer.msg(res.msg,{icon:2});
                            }
                        },
                        error:function(data){
                            layer.alert('错误'+data.msg,{icon:2});
                        }
                    });
                });
            }
        });
    });
    //给子级调用
    function res_msg(msg){
        layer.msg(msg,{icon:1});
        setTimeout(function(){
            window.location.reload();
        },1000);
    }
</script>
</body>
</html>