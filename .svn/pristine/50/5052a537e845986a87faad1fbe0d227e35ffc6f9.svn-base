<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8"/>
    <meta name="renderer" content="webkit">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <meta name="apple-mobile-web-app-status-bar-style" content="black">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="format-detection" content="telephone=no">
    <title>后台管理系统</title>
    <link rel="stylesheet" href="/assets/vendor/layui/css/layui.css"/>
    <link rel="stylesheet" href="/assets/model/common/css/style.css"/>
    <link rel="stylesheet" href="/assets/model/common/css/common.css"/>
    <!--[if lt IE 9]>
    <script src="/assets/model/common/js/html5shiv.min.js"></script>
    <script src="/assets/model/common/js/respond.min.js"></script>
    <![endif]-->
    <style>
        .layui-col-space15 {
            /* margin: -7.5px; */
            margin:-7.5px 0 !important;
        }
    </style>
</head>
<body class="hold-transition skin-blue sidebar-mini">
<form class="layui-form" action="" style="padding: 20px;" id="edit-form" lay-filter="edit-form">
    <div class="layui-form-item">
        <label class="layui-form-label">游戏</label>
        <div class="layui-input-inline">
            <select name="garrison_product_id"  lay-filter="garrison_product_id" id="garrison_product_id" lay-search="" >
                <option value="0" >请选择负责人</option>
            </select>

        </div>
    </div>

    <div class="layui-form-item">
        <label class="layui-form-label">区服ID</label>
        <div class="layui-input-inline">
            <input type="text"  name="server_id"  value=""  id="server_id" class="layui-input" >
        </div>
    </div>

    <div class="layui-form-item p_menu p_lev1">
        <label class="layui-form-label">内部角色ID</label>
        <div class="layui-input-inline">
            <input type="text" name="role_id" value="" id='role_id' class="layui-input">
        </div>
    </div>

    <div class="layui-form-item p_menu p_lev1">
        <label class="layui-form-label">内部角色名</label>
        <div class="layui-input-inline">
            <input type="text" name="role_name" value="" id="role_name" class="layui-input">

        </div>
    </div>

    <div class="layui-form-item p_menu p_lev1">
        <label class="layui-form-label">账号</label>
        <div class="layui-input-inline">
            <input type="text" name="account" value="" id="account" class="layui-input">

        </div>
    </div>

    <div class="layui-form-item p_menu p_lev1">
        <label class="layui-form-label">账号密码</label>
        <div class="layui-input-inline">
            <input type="text" name="password" value="" id="password" class="layui-input">

        </div>
    </div>


    <div class="layui-form-item">
        <label class="layui-form-label">负责部门</label>
        <div class="layui-input-inline">
            <select  name="admin_id" lay-verify="required" lay-search="" id="admin_department_id">
                <option value="0" >请选择负责部门
                </option>
            </select>
        </div>
    </div>

    <div class="layui-form-item">
        <label class="layui-form-label">负责人</label>
        <div class="layui-input-inline">
            <select  name="admin_id" lay-verify="required" lay-search="" id="admin_id">
            <option value="0" >请选择负责人
            </option>
            </select>
        </div>
    </div>

    <div class="layui-form-item">
        <label class="layui-form-label">进驻状态</label>
        <div class="layui-input-inline">
            <select  name="status" id='status' lay-verify="required" lay-search="">
                <option value="-1" >请选择进驻状态</option>
                <option value="0" >未进驻</option>
                <option value="1" >进驻中</option>
                <option value="2" >已抛服</option>
                <option value="3" >已退服</option>
            </select>
        </div>
    </div>
    <input type='hidden' name="id" value=""/>
    <div class="layui-form-item">
        <div class="layui-input-block">
            <button type="submit" class="layui-btn" lay-submit="" lay-filter="submit_btn">立即提交</button>
        </div>
    </div>
</form>
<script type="text/javascript" src="/assets/vendor/layui/layui.js"></script>
<script>

    var where = {};
    layui.config({
        version: true,
        base: '/assets/model/'
    }).extend({
        common: 'common/js/common',
        search: 'common/js/search',
    }).use(['table','common','jquery','form','laydate'], function(){
        var form = layui.form,
            laydate = layui.laydate,
            $ = layui.jquery, //重点处
            common = layui.common,
            table = layui.table;

        var pdata = common.urlParam;


        function getGarrisonProductList(id){
            common.req({
                url: "ajax/getGarrisonProductList",
                type: "post",
                dataType:"json",
                success:function(data){

                    $.each(data.data,function(k,v){
                        var optionstring = "";
                        $.each(data.data, function(i,item){
                            if(id == item.id ){
                                optionstring += "<option selected value=\"" + item.id + "\" >" + item.product_name + "</option>";
                            }else{
                                optionstring += "<option value=\"" + item.id + "\" >" + item.product_name + "</option>";
                            }

                        });

                        $("#garrison_product_id").html(optionstring);
                         form.render('select'); //这个很重要
                    });


                },
                error:function(res){
                    layer.alert('错误'+res.msg,{icon:2});
                }
            })
        }

        function getAdminDepartment(id){
            common.req({
                url: "account_registration/getAdminDepartment",
                type: "post",
                dataType:"json",
                success:function(data){

                    $.each(data.data,function(k,v){
                        var optionstring = "";
                        $.each(data.data, function(i,item){
                            if(id == item.id ){
                                optionstring += "<option selected value=\"" + item.id + "\" >" + item.name + "</option>";
                            }else{
                                optionstring += "<option value=\"" + item.id + "\" >" + item.name + "</option>";
                            }

                        });

                        $("#admin_department_id").html(optionstring);
                        form.render('select'); //这个很重要
                    });


                },
                error:function(res){
                    layer.alert('错误'+res.msg,{icon:2});
                }
            })
        }

        function getAdmin(id){
            common.req({
                url: "account_registration/getAdmin",
                type: "post",
                dataType:"json",
                success:function(res){
                    if( res.code == 0 ){
                        var html = '';
                        $.each(res.data,function(i,item){
                            if(id == item.id ){
                                html += "<option selected value=\"" + item.id + "\" >" + item.name + "</option>";
                            }else{
                                html += "<option value=\"" + item.id + "\" >" + item.name + "</option>";
                            }

                            $('#admin_id').append(html)
                        })

                        form.render('select');
                    }
                },
                error:function(data){
                    layer.alert('错误'+data.msg,{icon:2});
                }
            });
        }



        common.req({
            url: "account_registration/getOne",
            data: {'id':pdata.id},
            type: "post",
            dataType:"json",
            success:function(res){

                if( res.code==0 ){
                    console.log(res.data)
                    getGarrisonProductList(res.data.garrison_product_id);
                    getAdminDepartment(res.data.admin_department_id);
                    getAdmin(res.data.admin_id);

                    form.val('edit-form',res.data)

                }
            },
            error:function(res){
                layer.alert('错误'+res.msg,{icon:2});
            }
        });




    //监听提交
        form.on('submit(submit_btn)', function(data){

            common.req({
                url: "account_registration/edit",
                data: data.field,
                type: "post",
                dataType:"json",
                success:function(res){
                    console.log(res);
                    if( res.code==0 ){
                        var index = parent.layer.getFrameIndex(window.name);
                        window.parent.res_msg(res.msg);
                        parent.layer.close(index);//关闭当前页
                        //window.parent.location.reload(); //刷新父窗口
                    }
                },
                error:function(res){
                    layer.alert('错误'+res.msg,{icon:2});
                }
            });
            return false;
        });

    });
</script>
</body>
</html>