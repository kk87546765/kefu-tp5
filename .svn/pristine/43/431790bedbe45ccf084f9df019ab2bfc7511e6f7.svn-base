<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8"/>
    <meta name="renderer" content="webkit">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <meta name="apple-mobile-web-app-status-bar-style" content="black">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="format-detection" content="telephone=no">
    <title>后台管理系统</title>
    <link rel="stylesheet" href="/assets/vendor/layui/css/layui.css"/>
    <link rel="stylesheet" href="/assets/model/common/css/style.css"/>
    <link rel="stylesheet" href="/assets/model/common/css/common.css"/>
    <script type="text/javascript" src="/assets/vendor/layui/layui.js"></script>
    <!--[if lt IE 9]>
    <script src="/assets/model/common/js/html5shiv.min.js"></script>
    <script src="/assets/model/common/js/respond.min.js"></script>
    <![endif]-->
</head>
<style type="text/css">
    .statistic{
        padding-left: 20px;
        padding-top: 15px;
    }
    .statistic li{
        display: inline-block;
        margin-right: 10px;
    }
</style>
<body>
<div style="padding: 12px;"  class="search_wrap">
    <form class="layui-form" action="" lay-filter="edit-form" id="search_form">

        <div class="layui-inline" style="margin-bottom: 6px;">
            <label class="layui-form-label">会话来源：</label>
            <div class="layui-input-inline">
                <div id="select_kf_source" class="xm-select-demo" style="min-width: 210px"></div>
            </div>
        </div>

        <div class="layui-inline" style="margin-bottom: 6px;">
            <label class="layui-form-label">质检类型：</label>
            <div class="layui-input-inline">
                <select name="qc_type" lay-search="" id="qc_type">
                    <option value="">选择或搜索</option>
                </select>
            </div>
        </div>

        <span id="common_search"></span>
        
        <div class="layui-inline">
            <label class="layui-form-label">质检时间</label>
            <div class="layui-input-inline" style="width: 150px;">
                <input type="text" name="create_time_start"  value="" id="create_time_start" autocomplete="off" class="layui-input">
            </div>
            <div class="layui-input-inline" style="width: 150px;">
                <input type="text" name="create_time_end"  value="" id="create_time_end" autocomplete="off" class="layui-input">
            </div>
        </div>

        <div class="layui-inline">
            <label class="layui-form-label">会话时间</label>
            <div class="layui-input-inline" style="width: 150px;">
                <input type="text" name="server_start_start"  value="" id="server_start_start" autocomplete="off" class="layui-input">
            </div>
            <div class="layui-input-inline" style="width: 150px;">
                <input type="text" name="server_start_end"  value="" id="server_start_end" autocomplete="off" class="layui-input">
            </div>
        </div>

    </form>
</div>
<div class="layui-btn-group demoTable" style="padding: 0 15px;">
    <button class="layui-btn layui-btn-sm" data-type="search">搜索</button>
    <!-- <button class="layui-btn layui-btn-sm" data-type="add">添加</button> -->
    <!-- <button type="button" class="layui-btn layui-btn-sm layui-btn-danger" data-type="del"><i class="layui-icon"></i> 批量删除</button> -->
</div>

<div>
    <ul class="statistic" id="statistic">

    </ul>
</div>

<div class="table_wrap" style="padding: 0 15px;">
    <table id="idTest" lay-filter="demo" class="layui-table"></table>
</div>

<script>
    var rejectappeal_open_index;

    var lay_page = 1;
    var pdata = {};

    var layui_obj = layui.config({
        version: true,
        base: '/assets/model/'
    }).extend({
        common: 'common/js/common',
        search: 'common/js/search',
    }).use(['common','jquery','search','table','laydate','form','xmSelect'], function(){
        var table   = layui.table,
            form = layui.form,
            laydate = layui.laydate;
        var xmSelect = layui.xmSelect;
        var $ = layui.jquery;
        var common = layui.common;
        var search = layui.search;
        var urlParam = common.urlParam;
        //日期
        laydate.render({
            elem: '#create_time_start',
            trigger : 'click',
            type: 'datetime'
        });
        laydate.render({
            elem: '#create_time_end',
            trigger : 'click',
            type: 'datetime'
        });
        laydate.render({
            elem: '#server_start_start',
            trigger : 'click',
            type: 'datetime'
        });
        laydate.render({
            elem: '#server_start_end',
            trigger : 'click',
            type: 'datetime'
        });

        initData();

        form.on('select(kf_source)',function(data){
            set_source_info(data.value);
        })

        $('.demoTable .layui-btn').on('click', function(){
            var type = $(this).data('type');
            if( type=='search' ){

                let form_data = $('#search_form').serializeArray();
                
                $.each(form_data,function(k,v){
                    pdata[v.name] = v.value;
                })

                table.reload('idTest', {
                    method: 'post'
                    ,where: pdata
                    ,page: {
                        curr: 1
                    }
                });
            }
        });

        function initData(){

            if(urlParam.search_type == 'admin'){
                var field =[[
                    {field:'admin_id_str', minWidth:90, sort: true, title:'质检员'},
                ]];
                var table_url = 'qc_statistic/qcAdmin';
                var search_config_def = {
                    'platform':{
                        'status':1
                        ,'name':'platform_id'
                    }
                    ,'admin':{
                        'status':1
                        ,'p_data':{group_type:[3],is_active:1}
                        ,'title':'质检员'
                        ,'name':'admin_id'
                        ,'radio':true
                    }
                };
            }else{
                var field =[[
                    {field:'kf_id_str', minWidth:90, sort: true, title:'客服'},
                ]];
                var table_url = 'qc_statistic/qcKf';
                var search_config_def = {
                    'platform':{
                        'status':1
                        ,'name':'platform_id'
                    }
                    ,'admin':{
                        'status':1
                        ,'p_data':{group_type:[1,4,5],is_active:1}
                        ,'title':'客服'
                        ,'name':'kf_id'
                        ,'radio':true
                    }
                };
            }

            field[0].push({field:'platform_id_str', minWidth:90,  title:'主体'});
            field[0].push({field:'kf_source_str', minWidth:90,  title:'会话来源'});



            search.init('common_search',search_config_def);

            common.req({
                url: 'qc_statistic/qcKfConfig' //获取游戏名称
                ,success:function(json)
                {

                    var kf_source_data = [];

                    var base_config = json.config;
                    var field_list = json.field_list;
                    p_data = json.data;

                    $.each(field_list,function(k,v){
                        v.minWidth = common.tableFieldWith(v.title);
                        field[0].push(v);
                    });

                    form.val('edit-form',p_data);

                    $.each(base_config.kf_source_arr,function(k,v){
                        var this_data = {};
                        this_data.name = v;
                        this_data.value = k;
                        kf_source_data.push(this_data);
                    });

                    $.each(base_config.game_type,function(k,v){
                        $('select[name=game_type]').append('<option value="'+v+'">'+v+'</option>');
                    });

                    
                    var select_kf_source = xmSelect.render({
                        el: '#select_kf_source',
                        // prop:{
                        //     name:'reason',
                        //     value:'reason',
                        // },
                        toolbar: {
                            show: true,
                            list: [ 'ALL', 'CLEAR', 'REVERSE' ]
                        },
                        radio:true,
                        data: kf_source_data,
                        name:'kf_source',
                        on: function(data){
                            //arr:  当前多选已选中的数据
                            var arr = data.arr;
                            //change, 此次选择变化的数据,数组
                            var change = data.change;
                            //isAdd, 此次操作是新增还是删除
                            var isAdd = data.isAdd;

                            if(arr.length!=0){
                                set_source_info(arr[0].value);
                            }

                            //可以return一个数组, 代表想选中的数据
                            //return []
                        },
                    })

                    // 数据表格
                    table.render({
                        elem: '#idTest'
                        ,height: 'full-120'
                        ,url: common.getUrl(table_url) //数据接口
                        ,headers:common.getHeader()
                        ,page: true
                        ,limits:[20,50,100,200,500]
                        ,limit:20
                        ,minWidth:1000
                        ,autoWidth:true
                        ,cols: field
                        ,where:p_data
                        ,method:'post'
                        ,done:function(a,b,c){
                            lay_page = b;
                            if(c > 0){

                            }
                            console.log(a,b,c);
                        }
                    });

                    form.render();
                }
            });
            
            
        }

        function set_source_info(kf_source){
            common.req({
                url: "qc/getSourceConfig",
                data: {'kf_source':kf_source,keys:'qc_type'},
                type: "post",
                dataType:"json",
                success:function(res){
                    if( res.code==0 ){

                        $.each(res.data, function (k, v) {

                            if(k === 'qc_score_dec'){
                                // $.each(v,function(k1,v1){
                                //     v[k1].selected = true;
                                //     // console.log(v);
                                // })
                                // // console.log(v);
                                // select_demo.update({
                                //     data: v
                                // })
                            }else{
                                let this_id_obj = $('#'+k);
                                this_id_obj.html('<option value="">请选择</option>');
                                $.each(v,function (k1,v1){
                                    let thisdataval = this_id_obj.attr('data-val');
                                    if(v1 === thisdataval){
                                        this_id_obj.append('<option value="'+v1+'"  selected>'+v1+'</option>');
                                    }else{
                                        this_id_obj.append('<option value="'+v1+'" >'+v1+'</option>');
                                    }
                                })
                            }
                            
                        });

                        layui.form.render("select");//重新渲染 固定写法
                    }
                },
                error:function(data){
                    layer.alert('错误'+data.msg,{icon:2});
                }
            });
        }
    });
    //给子级调用
    function res_msg(msg){
        layer.msg(msg,{icon:1});
        setTimeout(function(){
            layui_obj.table.reload('idTest', {
                method: 'post'
                ,where: pdata
                ,page: {
                    curr: lay_page
                }
            });
        },1000);
    }
    
    function action(action,data){
        let str = '';
        switch (action) {
            case 'sell_statistic_month_detail':
                str = '<a class="layui-btn layui-btn-danger layui-btn-xs" lay-event="detail">详情</a>';
                break;
            default:

                break;
        }

        return str;
    }
</script>
</body>
</html>