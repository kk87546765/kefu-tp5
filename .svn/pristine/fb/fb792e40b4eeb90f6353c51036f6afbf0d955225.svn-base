<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8"/>
    <meta name="renderer" content="webkit">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <meta name="apple-mobile-web-app-status-bar-style" content="black">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="format-detection" content="telephone=no">
    <title>后台管理系统</title>
    <link rel="stylesheet" href="/assets/vendor/layui/css/layui.css"/>
    <link rel="stylesheet" href="/assets/model/common/css/style.css"/>
    <link rel="stylesheet" href="/assets/model/common/css/common.css"/>
    <script type="text/javascript" src="/assets/vendor/layui/layui.js"></script>
    <!--[if lt IE 9]>
    <script src="/assets/model/common/js/html5shiv.min.js"></script>
    <script src="/assets/model/common/js/respond.min.js"></script>
    <![endif]-->
</head>
<style>
    .laytable-cell-checkbox .layui-disabled.layui-form-checked i {
        background: #fff !important;
    }
    .statistic{
        padding-left: 20px;
        padding-top: 15px;
    }
    .statistic li{
        display: inline-block;
        margin-right: 10px;
    }
</style>

<body>
<div style="padding: 12px;"  class="search_wrap">
    <div class="layui-form" lay-filter="edit-form" action="" id="search_form">

        <div class="layui-inline">
            <label class="layui-form-label">日期</label>
            <div class="layui-input-inline" style="width: 150px;">
                <input type="text" name="day_start"  value="" id="day_start" autocomplete="off" class="layui-input">
            </div>
            <div class="layui-input-inline" style="width: 150px;">
                <input type="text" name="day_end"  value="" id="day_end" autocomplete="off" class="layui-input">
            </div>
        </div>

        <span id="common_search"></span>
        
    </div>
</div>
<div class="search-float-right">
    <div class="layui-btn-group demoTable" >
        <button class="layui-btn layui-btn-sm layui-power" id="VipStatistic-kfDayStatisticList" data-type="search">搜索</button>
    </div>
</div>
<div>
    <ul class="statistic">
        <li id="add_user_count">分配人数：<span>0</span></li>
        <li id="add_user_maintenance_str">联系率：<span>0</span></li>
        <li id="add_user_amount_month">用户业绩：<span>0</span></li>
    </ul>
</div>
<div class="table_wrap" style="padding: 0 15px;">
    <table id="idTest" lay-filter="demo" class="layui-table"></table>
</div>



<script>
    var lay_page = 1;
    var p_data = {};

    var layui_obj = layui.config({
        version: true,
        base: '/assets/model/'
    }).extend({
        common: 'common/js/common',
        search: 'common/js/search',
    }).use(['common','jquery','search','table','form','laydate','xmSelect'], function(){
        var table   = layui.table;
        var form = layui.form;
        var laydate = layui.laydate;
        var xmSelect = layui.xmSelect;
        var $ = layui.jquery;
        var common = layui.common;
        var search = layui.search;

         //日期
        laydate.render({
            elem: '#day_start',
            trigger : 'click',
            type: 'date'
        });

        //日期
        laydate.render({
            elem: '#day_end',
            trigger : 'click',
            type: 'date'
        });

        initData();

        $('.demoTable .layui-btn').on('click', function(){
            var type = $(this).data('type');
            if( type=='search' ){
                //搜索
                let form_data = form.val('edit-form');
                let search_statistic_flag = 0;

                $.each(form_data,function(k,v){

                    if(p_data[k] != v){
                        search_statistic_flag++;
                    }
                    p_data[k] = v;
                })

                if(search_statistic_flag>0){
                    statistic();
                }
                table.reload('idTest', {
                    method: 'post'
                    ,where: p_data
                    ,page: {
                        curr: 1
                    }
                });
            }
        });

        function initData(){

            common.initPowerShow(['VipStatistic-kfDayStatisticList']);

            common.req({
                url: 'vip_statistic/kfDayStatisticListConfig' //获取游戏名称
                ,success:function(json)
                {

                    var kf_source_data = [];

                    var base_config = json.data;

                    search.init('common_search',base_config.search_config);

                    form.val('edit-form',base_config.form);

                    statistic();

                    // 数据表格
                    table.render({
                        elem: '#idTest'
                        ,height: 'full-120'
                        ,url: common.getUrl('vip_statistic/kfDayStatisticList') //数据接口
                        ,headers:common.getHeader()
                        ,page: true
                        ,limits:[20,50,100,200,500]
                        ,limit:20
                        ,minWidth:1000
                        ,autoWidth:true
                        ,cols: [[
                             {field:'id', minWidth:80, sort: true, title:'ID'}
                            ,{field:'day_str', minWidth:110, title:'日期'}
                            ,{field:'product_id_str', minWidth:90, title:'游戏'}
                            ,{field:'game_id_str', minWidth:90, title:'子游戏'}
                            ,{field:'admin_id_str', minWidth:84, title:'VIP专员'}
                            ,{field:'add_user_count', minWidth:88, title:'新增分配'}
                            ,{field:'add_user_maintenance', minWidth:114, title:'新增分配联系'}
                            ,{field:'add_user_maintenance_str', minWidth:128, title:'新增分配联系率'}
                            ,{field:'add_user_amount_month', minWidth:148, title:'新增分配用户业绩'}
                        ]]
                        ,where:p_data
                        ,method:'post'
                        ,done:function(a,b,c){
                            lay_page = b;
                            if(c > 0){

                            }
                        }
                    });

                    form.render();
                }
            });
        }
        function statistic(){
            
            common.req({
                url: "vip_statistic/getVipKfDayStatistic",
                data: p_data,
                type: "post",
                dataType:"json",
                success:function(res){
                    if( res.code==0 ){
                        var count_res = res.data;
                        $('#add_user_count span').html(count_res.add_user_count);
                        $('#add_user_maintenance_str span').html(count_res.add_user_maintenance_str);
                        $('#add_user_amount_month span').html(count_res.add_user_amount_month);
                    }
                },
                error:function(data){
                    layer.alert('错误'+data.msg,{icon:2});
                }
            });
        }
        
    });



</script>
</body>
</html>