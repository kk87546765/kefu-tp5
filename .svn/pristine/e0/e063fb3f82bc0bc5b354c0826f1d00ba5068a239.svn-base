<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8"/>
    <meta name="renderer" content="webkit">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <meta name="apple-mobile-web-app-status-bar-style" content="black">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="format-detection" content="telephone=no">
    <title>后台管理系统</title>
    <link rel="stylesheet" href="/assets/vendor/layui/css/layui.css"/>
    <link rel="stylesheet" href="/assets/model/common/css/style.css"/>
    <link rel="stylesheet" href="/assets/model/common/css/common.css"/>
    <script type="text/javascript" src="/assets/vendor/layui/layui.js"></script>
    <!--[if lt IE 9]>
    <script src="/assets/model/common/js/html5shiv.min.js"></script>
    <script src="/assets/model/common/js/respond.min.js"></script>
    <![endif]-->
</head>
<style>
    .laytable-cell-checkbox .layui-disabled.layui-form-checked i {
        background: #fff !important;
    }
    .statistic{
        padding-left: 20px;
        padding-top: 15px;
    }
    .statistic li{
        display: inline-block;
        margin-right: 10px;
    }
</style>


<body>
<div style="padding: 12px;"  class="search_wrap">
    <form class="layui-form" action="" id="search_form">

        <span id="common_search"></span>

        <div class="layui-inline" style="margin-bottom: 6px;">
            <label class="layui-form-label">发货状态: </label>
            <div class="layui-input-inline">
                <select name="is_send" lay-verify="required">
                    <option value="-1">全部</option>
                </select>
            </div>
        </div>

        <div class="layui-inline">
            <label class="layui-form-label">账号: </label>
            <div class="layui-input-inline" >
                <input type="text" name="user_name" autocomplete="off" class="layui-input" value="">
            </div>
        </div>

        <div class="layui-inline">
            <label class="layui-form-label">添加时间</label>
            <div class="layui-input-inline" style="width: 150px;">
                <input type="text" name="add_time_start" value="" id="add_time_start" autocomplete="off" class="layui-input">
            </div>
            <div class="layui-input-inline" style="width: 150px;">
                <input type="text" name="add_time_end" value="" id="add_time_end" autocomplete="off" class="layui-input">
            </div>
        </div>

    </form>
</div>
<div class="layui-btn-group demoTable" style="padding: 0 30px; float: right;">
    <button class="layui-btn layui-btn-sm lay-power" id="Vip-userWelfareList" data-type="search">搜索</button>
</div>

<div class="table_wrap" style="padding: 0 15px;">
    <table id="idTest" lay-filter="demo" class="layui-table"></table>
</div>



<script>
    var qc_index;
    var lay_page = 1;
    var p_data = {};

    var layui_obj = layui.config({
        version: true,
        base: '/assets/model/'
    }).extend({
        common: 'common/js/common',
        search: 'common/js/search',
    }).use(['common','jquery','search','table','form','laydate'], function(){
        var table   = layui.table;
        var form = layui.form;
        var laydate = layui.laydate;

        var $ = layui.jquery;
        var common = layui.common;
        var search = layui.search;

         //日期
        laydate.render({
            elem: '#add_time_start',
            trigger: 'click',
            type: 'datetime'
        });

        //日期
        laydate.render({
            elem: '#add_time_end',
            trigger: 'click',
            type: 'datetime'
        });

        initData();

        //监听工具条
        table.on('tool(demo)', function(obj){
            var data = obj.data;
            if(obj.event === 'detail'){
                var title='编辑';
                var url = 'vip_user_welfare_detail.html?id='+data.id;

                var this_index = layer.open({
                    type: 2,
                    title: title+'详情',
                    maxmin: true,
                    shadeClose: true, //点击遮罩关闭层
                    area : ['70%' , '70%'],
                    content: url
                });

                layer.full(this_index);
            }
        });



        $('.demoTable .layui-btn').on('click', function(){
            var type = $(this).data('type');
            if( type=='search' ){
                //搜索
                let form_data = $('#search_form').serializeArray();
                // console.log(form_data);return;
                $.each(form_data,function(k,v){
                    p_data[v.name] = v.value;
                })
                table.reload('idTest', {
                    method: 'post'
                    ,where: p_data
                    ,page: {
                        curr: 1
                    }
                });
            }
        });

        function initData(){

            p_data = common.urlParam;

            common.initPowerShow([
                'Vip-userWelfareList'
            ]);

            common.req({
                url: 'vip/userWelfareListConfig' //获取游戏名称
                ,success:function(json)
                {

                    var kf_source_data = [];

                    var base_config = json.data;

                    $.each(base_config.is_send_arr,function(k,v){
                        $('select[name=is_send]').append('<option value="'+k+'">'+v+'</option>');
                    });

                    search.init('common_search',base_config.search_config);

                    // 数据表格
                    table.render({
                        elem: '#idTest'
                        ,height: 'full-120'
                        ,url: common.getUrl('vip/userWelfareList') //数据接口
                        ,headers:common.getHeader()
                        ,page: true
                        ,limits:[20,50,100,200,500]
                        ,limit:20
                        ,minWidth:1000
                        ,autoWidth:true
                        ,where:p_data
                        ,method:'POST'
                        ,cols: [[ //表头
                            {field:'id', minWidth:80, sort: true, title:'ID'}
                            ,{field:'platform_id_str', minWidth:90, title:'平台类型'}
                            ,{field:'user_name', minWidth:90, title:'用户'}
                            ,{field:'goods', minWidth:90, title:'物品'}
                            ,{field:'is_send_str', minWidth:130, title:'是否发货'}
                            ,{field:'admin_id_str', minWidth:120, title:'操作人'}
                            ,{field:'add_time', minWidth:150, title:'添加时间'}
                            ,{minWidth:163, align:'center', fixed: 'right', title:'操作'
                            ,templet:function(d){
                                    let str = '';
                                    if(d.action && d.action.length>0){
                                        $.each(d.action,function(k,v){
                                            str+= action(v);
                                        })
                                    }
                                    return str;
                                }
                            }
                        ]]
                        ,done:function(a,b,c){
                            lay_page = b;
                            if(c > 0){

                            }
                        }
                    });
                    form.render();
                }
            });
        }
        
    });
    //给子级调用
    function res_msg(msg){
        layer.msg(msg,{icon:1});
        setTimeout(function(){
            // window.location.reload();
            lay_obj.table.reload('idTest', {
                method: 'post'
                ,where: p_data
                ,page: {
                    curr: lay_page
                }
            });
        },1000);
    }

    function action(action,data){
        let str = '';
        switch (action) {
            case 'userWelfareDetail':
                str = '<a class="layui-btn layui-btn-xs" lay-event="detail">详情</a>';
                break;            
            default:

                break;
        }

        return str;
    }
</script>
</body>
</html>