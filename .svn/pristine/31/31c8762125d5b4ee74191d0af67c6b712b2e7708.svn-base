<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8"/>
    <meta name="renderer" content="webkit">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <meta name="apple-mobile-web-app-status-bar-style" content="black">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="format-detection" content="telephone=no">
    <title>后台管理系统</title>
    <link rel="stylesheet" href="/assets/vendor/layui/css/layui.css"/>
    <link rel="stylesheet" href="/assets/model/common/css/style.css"/>
    <link rel="stylesheet" href="/assets/model/common/css/common.css"/>
    <script type="text/javascript" src="/assets/vendor/layui/layui.js"></script>
    <!--[if lt IE 9]>
    <script src="/assets/model/common/js/html5shiv.min.js"></script>
    <script src="/assets/model/common/js/respond.min.js"></script>
    <![endif]-->
</head>
<style>
    .laytable-cell-checkbox .layui-disabled.layui-form-checked i {
        background: #fff !important;
    }
    #data_detail{
        margin: 10px;
    }
    #data_detail tr{

    }
    #data_detail tr td,#data_detail tr th{
        min-width: 120px;
        text-align: center;
        padding: 5px;
    }

    #data_detail .active{
        background: #eee;
    }
    .warning_1{
        background: #1E9FFF;
    }
    .warning_2{
        background: #FFB800;
    }
    .warning_3{
        background: #FF5722;
    }
    .warning_4{
        background: #393D49;
    }
</style>

<table id="data_detail" style="display: none">
    
</table>
<body>
<!-- 加载动画 -->
<div class="page-loading">
    <div class="ball-loader">
        <span></span><span></span><span></span><span></span>
    </div>
</div>
<div style="padding: 12px;"  class="search_wrap">
    <form class="layui-form" action="" id="search_form">
        <div class="layui-inline" style="margin-bottom: 6px;">
            <label class="layui-form-label">用户: </label>
            <div class="layui-input-inline">
                <select name="admin_id" lay-search="">
                </select>
            </div>
        </div>

        <div class="layui-inline" style="margin-bottom: 6px;">
            <label class="layui-form-label">操作: </label>
            <div class="layui-input-inline">
                <div id="select_ca" class="xm-select-demo" style="min-width: 210px"></div>
            </div>
        </div>

        <div class="layui-inline">
           <label class="layui-form-label">控制器: </label>
           <div class="layui-input-inline" style="width: 150px;">
               <input type="text" name="controller" placeholder="" autocomplete="off" class="layui-input">
           </div>
       </div>

       <div class="layui-inline">
           <label class="layui-form-label">方法: </label>
           <div class="layui-input-inline" style="width: 150px;">
               <input type="text" name="action" placeholder="" autocomplete="off" class="layui-input">
           </div>
       </div>

        <div class="layui-inline">
           <label class="layui-form-label">时间: </label>

           <div class="layui-input-inline" style="width: 150px;">
               <input type="text" name="start_time" id="sdate" placeholder="开始时间" autocomplete="off" class="layui-input">
           </div>
           -
           <div class="layui-input-inline" style="width: 150px;">
               <input type="text" name="end_time" id="edate"  placeholder="结束时间" autocomplete="off" class="layui-input">
           </div>

       </div>
    </form>
</div>
<div class="layui-btn-group demoTable" style="padding: 0 15px;">
    <button class="layui-btn layui-btn-sm" data-type="search">搜索</button>
    <button class="layui-btn layui-btn-sm" data-type="statistic">统计</button>
</div>
<div class="table_wrap" style="padding: 0 15px;">
    <table id="idTest" lay-filter="demo" class="layui-table"></table>
</div>
<script>
    var layui_obj = layui.config({
        version: true,
        base: '/assets/model/'
    }).extend({
        common: 'common/js/common',
    }).use(['common','table','form','jquery','laydate','xmSelect'], function(){
        var table   = layui.table;
        var form = layui.form;
        var laydate = layui.laydate;
        var xmSelect = layui.xmSelect;
        var common = layui.common;
        var $ = layui.jquery;

        //日期
        laydate.render({
            elem: '#sdate',
            trigger : 'click',
            type: 'datetime'
        });
        laydate.render({
            elem: '#edate',
            trigger : 'click',
            type: 'datetime'
        });

        //初始化权限显示
        common.initPowerShow(['Sysmanage-platformAdd','Sysmanage-platformList']);
        //初始化页面数据
        initData();

        //监听工具条
        table.on('tool(demo)', function(obj){
            var data = obj.data;
            if(obj.event === 'data_info'){
                var title='数据详细';
                setDataInfo(data.data_info);

                layer.open({
                    type: 1,
                    title: title,
                    maxmin: true,
                    shadeClose: true, //点击遮罩关闭层
                    area : ['70%' , '70%'],
                    content: $('#data_detail')
                });
            }

        });

        $('.demoTable .layui-btn').on('click', function(){
            var type = $(this).data('type');
            if( type=='search' ){
                //搜索
                let form_data = $('#search_form').serializeArray();
                var pdata = {};

                $.each(form_data,function(k,v){
                    pdata[v.name] = v.value;
                })

                table.reload('idTest', {
                    method: 'post'
                    ,where: pdata
                    ,page: {
                        curr: 1
                    }
                });
            }else if( type=='statistic' ){
                //统计
                var url = 'view/admin_log/statistic.html';

                window.parent.topTabsPageCreate({url:url,title:'操作记录统计',urlType:'',close:true});
            }
        });

        function initData(){

            common.req({
                url:'Admin/adminLogConfig'
                ,data:{}
                ,success:(json)=>{
                    if(json.code == 0){
                        
                        config = json.data;
                        var admin_list = {'':'全部'};
                        var menu_list = [];

                        $.each(config.admin_list,(k,v)=>{
                            admin_list[v.id] = v.name;
                        })

                        $.each(config.menu_list,(k,v)=>{
                            var this_info = {'name':k,'children':[]};
                            $.each(v,(k1,v1)=>{
                                this_info.children.push({'name':v1,'value':k+'::'+k1});
                            })
                            menu_list.push(this_info)
                        })

                        common.setOption1(admin_list,$('select[name="admin_id"]'));

                        var select_ca = xmSelect.render({
                            el: '#select_ca',
                            toolbar: {
                                show: true,
                                list: [ 'ALL', 'CLEAR', 'REVERSE' ]
                            },
                            filterable:true,
                            data: menu_list,
                            name:'ca',
                            on: function(data){
                                //arr:  当前多选已选中的数据
                                var arr = data.arr;
                                //change, 此次选择变化的数据,数组
                                var change = data.change;
                                //isAdd, 此次操作是新增还是删除
                                var isAdd = data.isAdd;

                                //可以return一个数组, 代表想选中的数据
                                //return []
                            },
                        })

                        form.render();
                        
                    }else{
                        layer.alert('错误'+json.msg);
                    }
                }
            })

            table.render({
                elem: '#idTest'
                ,height: 'full-120'
                ,url: common.apiUrl+'Admin/adminLogList' //数据接口
                ,headers: common.getHeader()
                ,page: true //开启分页
                ,limits:[20,50,100,200,500]
                ,limit:20
                ,minWidth:1000
                ,autoWidth:true
                ,method:'post'
                ,cols: [[ //表头
                    {field:'id', minWidth:80, sort: true, title:'ID'}
                    ,{field:'admin_id_str', minWidth:100, title:'后台人员'}
                    ,{field:'url', minWidth:200, title:'地址'}
                    ,{field:'ca_str', minWidth:200, title:'操作名称'}
                    ,{field:'controller', minWidth:80, title:'controller'}
                    ,{field:'action_str', minWidth:80, title:'action'}
                    ,{field:'add_time', minWidth:150, title:'添加时间'}
                    ,{minWidth:80, align:'center', fixed: 'right', title:'操作'
                    ,templet:function(d){
                            let str = '';
                            if(d.action && d.action.length>0){
                                $.each(d.action,function(k,v){
                                    str+= action(v,d);
                                })
                            }
                            return str;
                        }
                    }
                ]]
                ,done:(a,b,c)=>{
                    common.isLoading(false);
                }
            });
        }

        function setDataInfo(data){

            var html='<tr><th style="min-width:130px;">field</th><th>data</th></tr>';
            var obj = eval('('+data+')');
            // $.each(obj,function(k,v){
            //     // console.log(k,v);
            //     html+= '<tr><td>'+k+'</td><td>'+v+'</td></tr>'
            // });
            html += common.setDataInfoHtml(obj,0);

            $('#data_detail').html(html);
        };
        
    });


    function action(action,data){
        let str = '';

        switch (action) {
            case 'data_info':
                str = '<a class="layui-btn layui-btn-xs warning_'+data.warning_type+'" lay-event="data_info">数据信息</a>';
                break;
            default:

                break;
        }

        return str;
    }
                
</script>
</body>
</html>