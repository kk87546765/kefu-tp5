<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8"/>
    <meta name="renderer" content="webkit">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <meta name="apple-mobile-web-app-status-bar-style" content="black">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="format-detection" content="telephone=no">
    <title>后台管理系统</title>
    <link rel="stylesheet" href="/assets/vendor/layui/css/layui.css"/>
    <link rel="stylesheet" href="/assets/model/common/css/style.css"/>
    <link rel="stylesheet" href="/assets/model/common/css/common.css"/>
    <script type="text/javascript" src="/assets/vendor/layui/layui.js"></script>
    <!--[if lt IE 9]>
    <script src="/assets/model/common/js/html5shiv.min.js"></script>
    <script src="/assets/model/common/js/respond.min.js"></script>
    <![endif]-->
</head>
<style>
    .laytable-cell-checkbox .layui-disabled.layui-form-checked i {
        background: #fff !important;
    }
    .statistic{
        padding-left: 20px;
        padding-top: 15px;
    }
    .statistic li{
        display: inline-block;
        margin-right: 10px;
    }
</style>
<body>

<div style="padding: 12px;"  class="search_wrap">
    <form class="layui-form" action="" lay-filter="search_form">

        <span id="common_search"></span>

        <div class="layui-inline">
            <label class="layui-form-label">日期</label>
            <div class="layui-input-inline" style="width: 150px;">
                <input type="text" name="date"  value="" id="date" autocomplete="off" class="layui-input">
            </div>

    </form>
</div>
<div class="layui-btn-group demoTable" style="padding: 0 30px; float: right;">
    <button class="layui-btn layui-btn-sm layui-power" id="VipConfig-becomeVipStandardList" data-type="search">搜索</button>
</div>

<div>
    <ul class="statistic">
        <li id="all_uphold_user_count">总维护人数：<span>0</span></li>
        <li id="month_uphold_amount">单月维护金额：<span>0</span></li>
        <li id="month_new_contact_count">月建联人数：<span>0</span></li>
        <li id="month_new_contact_amount">月建联维护金额：<span>0</span></li>
        <li id="month_new_distribution_contact_count">月新分配建联人数：<span>0</span></li>
        <li id="month_new_distribution_contact_amount">新用户维护金额：<span>0</span></li>
    </ul>
</div>


<div class="table_wrap" style="padding: 0 15px;">
    <table id="idTest" lay-filter="demo" class="layui-table"></table>
</div>



<script>
    var pdata = {};
    var layui_obj = layui.config({
        //version: true,
        base: '/assets/model/'
    }).extend({
        common: 'common/js/common',
        search: 'common/js/search',
    }).use(['common','jquery','search','table','form','laydate'], function(){
        var table   = layui.table;
        var form = layui.form;
        var $ = layui.jquery;
        var common = layui.common;
        var search = layui.search;
        var laydate = layui.laydate;


        //日期
        //页面头部的日期组件
        var end = laydate.render({
            elem: '#date', //选择器结束时间
            format: 'yyyy-MM',
            type: 'month',
            showBottom: false, //关闭底部框 去掉取消、确定、清空按钮
            // 选择年份或者月份都会关闭
            change: function (value, date, endDate) { //监听日期被切换
                lay('#date').val(value);
                if ($(".layui-laydate").length) {
                    $(".layui-laydate").remove();
                }
            },


            //选择月份即选中关闭  年份扔可以左右点击选择
            change: function (value, date, endDate) { //监听日期被切换
                lay('#date').val(value);
                $('.laydate-month-list').on('click','li',function () {//利用的事件委托
                    $('.layui-laydate').remove()
                })
            },
            done: function (value, date) {
                start.config.max = {
                    year:value ? date.year : 3099,
                    month: date.month - 1, //关键
                    date: date.date,
                    hours: 0,
                    minutes: 0,
                    seconds: 0
                }
            }
        });


        initData();

        //监听工具条
        table.on('tool(demo)', function(obj){
            var data = obj.data;

        });

        $('.demoTable .layui-btn').on('click', function(){
            var type = $(this).data('type');
            if( type=='search' ){
                //搜索
                pdata = form.val("search_form");
                // pdata.vip_game_product_id     = $('select[name="vip_game_product_id"]').val();              
                table.reload('idTest', {
                    method: 'post'
                    ,where: pdata
                    ,page: {
                        curr: 1
                    }
                });

                if(pdata){
                    common.req({
                        url: "mouth_uphold_statistics/getStatistic",
                        data: pdata,
                        type: "post",
                        dataType:"json",
                        success:function(res){
                            if( res.code==0 ){
                                var count_res = res.data;

                                $('#all_uphold_user_count span').html(count_res.all_uphold_user_count);
                                $('#month_uphold_amount span').html(count_res.month_uphold_user_amount);
                                $('#month_new_contact_count span').html(count_res.month_new_contact_count);
                                $('#month_new_contact_amount span').html(count_res.month_new_contact_amount);
                                $('#month_new_distribution_contact_count span').html(count_res.month_new_distribution_contact_count);
                                $('#month_new_distribution_contact_amount span').html(count_res.month_new_distribution_contact_amount);
                            }
                        },
                        error:function(data){
                            layer.alert('错误'+data.msg,{icon:2});
                        }
                    });
                }

            }
        });

        form.on("checkbox(siam_all)", function () {
            var status = $(this).prop("checked");
            $.each($("input[name=siam_one]"), function (i, value) {
                $(this).prop("checked", status);
            });
            form.render();
        });

        function initData(){

            common.initPowerShow([
                'VipConfig-becomeVipStandardList'
            ]);

            var search_config_def = {
                'game':{
                    'status':1
                }
                ,'product':{
                    'status':1
                }
                ,'admin':{
                    'status':1
                }
            };

            search.init('common_search',search_config_def);

            // 数据表格
            table.render({
                elem: '#idTest'
                ,height: 'full-120'
                ,url: common.getUrl('mouth_uphold_statistics/index') //数据接口
                ,headers:common.getHeader()
                ,page: true
                ,limits:[20,50,100,200,500]
                ,limit:20
                ,minWidth:1000
                ,autoWidth:true
                ,method:'POST'
                ,cols: [[ //表头
                    {field:'date', width:100, sort: true, title:'月份'}
                    ,{field:'product_name', minWidth:183, title:'游戏'}
                    ,{field:'game_name', minWidth:150, title:'子游戏'}
                    ,{field:'admin_name', minWidth:80, title:'VIP专员'}
                    ,{field:'all_uphold_user_count', minWidth:80, title:'维护人数'}
                    ,{field:'month_uphold_user_amount', minWidth:80, title:'月维护金额'}
                    ,{field:'month_new_contact_count', minWidth:50, title:'月新建联人数'}
                    ,{field:'month_new_contact_amount', minWidth:50, title:'月建联维护金额'}
                    ,{field:'month_new_distribution_contact_count', minWidth:150, title:'月新分配建联人数'}
                    ,{field:'month_new_distribution_contact_amount', minWidth:50, title:'新用户维护金额'}

                ]]

            });
            form.render();
        }

        
    });
    //给子级调用
    function res_msg(msg){
        layer.msg(msg,{icon:1});
        setTimeout(function(){
            window.location.reload();
        },1000);
    }


</script>
</body>
</html>