<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8"/>
    <meta name="renderer" content="webkit">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <meta name="apple-mobile-web-app-status-bar-style" content="black">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="format-detection" content="telephone=no">
    <title>后台管理系统</title>
    <link rel="stylesheet" href="/assets/vendor/layui/css/layui.css"/>
    <link rel="stylesheet" href="/assets/model/common/css/style.css"/>
    <link rel="stylesheet" href="/assets/model/common/css/common.css"/>
    <script type="text/javascript" src="/assets/vendor/layui/layui.js"></script>
    <!--[if lt IE 9]>
    <script src="/assets/model/common/js/html5shiv.min.js"></script>
    <script src="/assets/model/common/js/respond.min.js"></script>
    <![endif]-->
</head>
<style>
    .laytable-cell-checkbox .layui-disabled.layui-form-checked i {
        background: #fff !important;
    }
    #data_detail{
        margin: 10px;
    }
    #data_detail tr{

    }
    #data_detail tr td,#data_detail tr th{
        min-width: 120px;
        text-align: center;
        padding: 5px;
    }
    #data_detail .active{
        background: #eee;
    }
</style>

<table id="data_detail" style="display: none">
    
</table>
<body>
<!-- 加载动画 -->
<div class="page-loading">
    <div class="ball-loader">
        <span></span><span></span><span></span><span></span>
    </div>
</div>
<div style="padding: 12px;"  class="search_wrap">
    <div class="layui-form" lay-filter="edit-form" action="" id="search_form">

        <div class="layui-inline">
           <label class="layui-form-label">控制器: </label>
           <div class="layui-input-inline" style="width: 150px;">
               <input type="text" name="controller" placeholder="" autocomplete="off" class="layui-input">
           </div>
       </div>

       <div class="layui-inline">
           <label class="layui-form-label">方法: </label>
           <div class="layui-input-inline" style="width: 150px;">
               <input type="text" name="action" placeholder="" autocomplete="off" class="layui-input">
           </div>
       </div>

       <div class="layui-inline">
           <label class="layui-form-label">状态: </label>
           <div class="layui-input-inline" style="width: 150px;">
               <select name="status">
                   <option value=''>全部</option>
               </select>
           </div>
       </div>

        <div class="layui-inline">
           <label class="layui-form-label">时间: </label>

           <div class="layui-input-inline" style="width: 150px;">
               <input type="text" name="start_time" id="sdate" placeholder="开始时间" autocomplete="off" class="layui-input">
           </div>
           -
           <div class="layui-input-inline" style="width: 150px;">
               <input type="text" name="end_time" id="edate"  placeholder="结束时间" autocomplete="off" class="layui-input">
           </div>

       </div>
    </div>
</div>
<div class="layui-btn-group demoTable" style="padding: 0 15px;">
    <button class="layui-btn layui-btn-sm" data-type="search">搜索</button>
    <button class="layui-btn layui-btn-sm" data-type="statistic">统计</button>
</div>
<div class="table_wrap" style="padding: 0 15px;">
    <table id="idTest" lay-filter="demo" class="layui-table"></table>
</div>
<script>
    var p_data = {
        // 'end_time':'2021-08-24 00:00:00'
    };
    var layui_obj = layui.config({
        version: true,
        base: '/assets/model/'
    }).extend({
        common: 'common/js/common',
    }).use(['common','table','form','jquery','laydate','xmSelect'], function(){
        var table   = layui.table;
        var form = layui.form;
        var laydate = layui.laydate;
        var xmSelect = layui.xmSelect;
        var common = layui.common;
        var $ = layui.jquery;

        //日期
        laydate.render({
            elem: '#sdate',
            trigger : 'click',
            type: 'datetime'
        });
        laydate.render({
            elem: '#edate',
            trigger : 'click',
            type: 'datetime'
        });

        //初始化权限显示
        // common.initPowerShow(['Sysmanage-platformAdd','Sysmanage-platformList']);
        //初始化页面数据
        initData();

        //监听工具条
        table.on('tool(demo)', function(obj){
            var data = obj.data;
            if(obj.event === 'data_info'){
                var title='数据详细';
                setDataInfo(data.data_info);

                layer.open({
                    type: 1,
                    title: title,
                    maxmin: true,
                    shadeClose: true, //点击遮罩关闭层
                    area : ['70%' , '70%'],
                    content: $('#data_detail')
                });
            }

        });

        $('.demoTable .layui-btn').on('click', function(){
            var type = $(this).data('type');
            if( type=='search' ){
                //搜索
                let form_data = form.val('edit-form');
                $.each(form_data,function(k,v){
                    p_data[k] = v;
                })

                table.reload('idTest', {
                    method: 'post'
                    ,where: p_data
                    ,page: {
                        curr: 1
                    }
                });
            }else if( type=='statistic' ){
                //统计
                var url = 'view/run_log/statistic.html';

                window.parent.topTabsPageCreate({url:url,title:'脚本统计',urlType:'',close:true});
            }
        });

        function initData(){

            common.req({
                url:'Admin/runLogListConfig'
                ,data:{}
                ,success:(json)=>{
                    if(json.code == 0){
                        
                        var base_config = json.data;
                        p_data = base_config.form_data;
                        $.each(base_config.status_arr,function(k,v){
                            $('select[name=status]').append('<option value="'+(parseInt(k)+1)+'">'+v+'</option>');
                        })


                        form.render();
                        form.val('edit-form',base_config.form_data);


                        table.render({
                            elem: '#idTest'
                            ,height: 'full-120'
                            ,url: common.apiUrl+'Admin/runLogList' //数据接口
                            ,headers: common.getHeader()
                            ,page: true //开启分页
                            ,limits:[20,50,100,200,500]
                            ,limit:20
                            ,minWidth:1000
                            ,autoWidth:true
                            ,method:'post'
                            ,where:p_data
                            ,cols: [[ //表头
                                {field:'id', minWidth:80, sort: true, title:'ID'}
                                ,{field:'controller', minWidth:80, title:'controller'}
                                ,{field:'action', minWidth:80, title:'action'}
                                ,{field:'status_str', minWidth:80, title:'状态'}
                                ,{field:'add_time', minWidth:150, title:'添加时间'}
                                ,{minWidth:80, align:'center', fixed: 'right', title:'操作'
                                ,templet:function(d){
                                        let str = '';
                                        // if(d.action && d.action.length>0){
                                        //     $.each(d.action,function(k,v){
                                        //         str+= action(v);
                                        //     })
                                        // }
                                        str+= action('data_info');
                                        return str;
                                    }
                                }
                            ]]
                            ,done:(a,b,c)=>{
                                common.isLoading(false);
                            }
                        });
                    }else{
                        layer.alert('错误'+json.msg);
                    }
                }
            })
        }

        function setDataInfo(data){

            var html='<tr><th style="min-width:130px;">field</th><th>data</th></tr>';
            html = '';
            // var obj = eval('('+data+')');
            html+= common.setDataInfoHtml(data,0);
                // console.log(html);
            $('#data_detail').html(html);
        };
    });


    function action(action,data){
        let str = '';
        switch (action) {
            case 'data_info':
                str = '<a class="layui-btn layui-btn-xs" lay-event="data_info">数据信息</a>';
                break;
            default:

                break;
        }

        return str;
    }
                
</script>
</body>
</html>