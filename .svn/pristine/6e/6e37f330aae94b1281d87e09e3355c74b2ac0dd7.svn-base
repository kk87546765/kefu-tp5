<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8"/>
    <meta name="renderer" content="webkit">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <meta name="apple-mobile-web-app-status-bar-style" content="black">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="format-detection" content="telephone=no">
    <title>后台管理系统</title>
    <link rel="stylesheet" href="/assets/vendor/layui/css/layui.css"/>
    <link rel="stylesheet" href="/assets/model/common/css/style.css"/>
    <link rel="stylesheet" href="/assets/model/common/css/common.css"/>
    <script type="text/javascript" src="/assets/vendor/layui/layui.js"></script>
    <!--[if lt IE 9]>
    <script src="/assets/model/common/js/html5shiv.min.js"></script>
    <script src="/assets/model/common/js/respond.min.js"></script>
    <![endif]-->
</head>
<body>
<div style="padding: 12px;"  class="search_wrap">
    <form class="layui-form" lay-filter="edit-form" action="" id="search_form">

        <span id="common_search"></span>

        <div class="layui-inline">
            <label class="layui-form-label">成交时间</label>
            <div class="layui-input-inline" style="width: 150px;">
                <input type="text" name="pay_time_start"  value="" id="pay_time_start" autocomplete="off" class="layui-input">
            </div>
            <div class="layui-input-inline" style="width: 150px;">
                <input type="text" name="pay_time_end"  value="" id="pay_time_end" autocomplete="off" class="layui-input">
            </div>
        </div>

        <div class="layui-inline">
            <label class="layui-form-label">区服ID</label>
            <div class="layui-input-inline" style="width: 100px;">
                <input type="text" name="server_id_min" id="server_id_min" autocomplete="off" class="layui-input" value=''>
            </div>
        </div>
    </form>
</div>

<div class="layui-btn-group demoTable" style="padding: 0 30px; float: right;">
    <button type="button" id="refresh" class="layui-btn  layui-btn-sm">
        <i class="layui-icon layui-icon-refresh"></i>
    </button>
    <button class="layui-btn layui-btn-sm" data-type="search">搜索</button>
</div>
<div class="layui-btn-container" style="padding: 0 15px;">
    <a href="marketing_stage_report.html"><button type="button" class="layui-btn" style="margin-bottom: 0; ">营销汇总</button></a>
</div>
<div class="table_wrap" style="padding: 0 15px;">
    <table id="idTest" lay-filter="demo" class="layui-table" style="margin-top: 0;"></table>
</div>

<script>
    var lay_page = 1;

    var p_data = {
        'type':1
    };

    var layui_obj = layui.config({
        version: true,
        base: '/assets/model/'
    }).extend({
        common: 'common/js/common',
        search: 'common/js/search',
    }).use(['common','jquery','search','table','laydate','form'], function(){
        var table   = layui.table,
            form = layui.form,
            laydate = layui.laydate;
        var $ = layui.jquery;
        var common = layui.common;
        var search = layui.search;
        //日期
        laydate.render({
            elem: '#pay_time_start',
            trigger : 'click',
            // type: 'month'
        });
        laydate.render({
            elem: '#pay_time_end',
            trigger : 'click',
            // type: 'month'
        });

        initData();

        $('.demoTable .layui-btn').on('click', function(){
            var type = $(this).data('type');
            if( type=='search' ){
                let form_data = $('#search_form').serializeArray();

                $.each(form_data,function(k,v){
                    p_data[v.name] = v.value;
                })
                if (p_data.platform_id == '' || p_data.platform_id == undefined) {
                    alert('请选择平台！！');
                    return;
                }
                
                // if (p_data.p_p == '' || p_data.p_p == undefined) {
                //     alert('请选择游戏！！');
                //     return;
                // }
                table.reload('idTest', {
                    method: 'post'
                    ,where: p_data
                    ,page: {
                        curr: 1
                    }
                });
            }
        });

        function initData(){

            common.req({
                url: 'vip_statistic/marketingStageReportPersonalConfig' //获取游戏名称
                ,success:function(json)
                {
                    var base_config = json.data;
                    var form_data = base_config.form_data;
                    p_data = common.merge(p_data,form_data);
                    search.init('common_search',base_config.search_config);

                    // 数据表格
                    table.render({
                        elem: '#idTest'
                        ,height: 'full-120'
                        ,url: common.getUrl('vip_statistic/marketingStageReportPersonal') //数据接口
                        ,headers:common.getHeader()
                        ,page: true
                        ,limits:[20,50,100,200,500]
                        ,limit:20
                        ,minWidth:1000
                        ,autoWidth:true
                        ,method:'POST'
                        ,cols: [[ //表头
                            {field:'date', minWidth:80, sort: true, title:'日期'}
                            ,{field:'group_name', minWidth:90, title:'营销组别'}
                            ,{field:'admin_name', minWidth:90, title:'VIP专员'}
                            ,{field:'amount_count', minWidth:90, title:'充值总额'}
                            ,{field:'order_count', minWidth:90, title:'充值次数'}
                            ,{field:'people_count', minWidth:90, title:'充值人数'}
                            ,{field:'ltv', minWidth:90, title:'LTV值'}
                            ,{field:'sell_amount', minWidth:90, title:'工单总额'}
                            ,{field:'not_sell_amount', minWidth:90, title:'非工单总额'}
                            ,{field:'sell_count', minWidth:90, title:'工单次数'}
                            ,{field:'sell_amount_proportion', minWidth:90, title:'工单金额占比'}
                        ]]
                        ,where:p_data
                        ,done:function(a,b,c){
                            lay_page = b;
                            if(c > 0){

                            }
                        }
                    });
                    form.render();
                    form.val('edit-form',form_data);
                }
            });
        }
    });
    //给子级调用
    function res_msg(msg){
        layer.msg(msg,{icon:1});
        setTimeout(function(){
            layui_obj.table.reload('idTest', {
                method: 'post'
                ,where: p_data
                ,page: {
                    curr: lay_page
                }
            });
        },1000);
    }
</script>
</body>
</html>