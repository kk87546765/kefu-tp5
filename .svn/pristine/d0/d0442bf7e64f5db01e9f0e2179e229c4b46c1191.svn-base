<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8"/>
    <meta name="renderer" content="webkit">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <meta name="apple-mobile-web-app-status-bar-style" content="black">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="format-detection" content="telephone=no">
    <title>后台管理系统</title>
    <link rel="stylesheet" href="/assets/vendor/layui/css/layui.css"/>
    <link rel="stylesheet" href="/assets/model/common/css/style.css"/>
    <link rel="stylesheet" href="/assets/model/common/css/common.css"/>
    <script type="text/javascript" src="/assets/vendor/layui/layui.js"></script>
    <!--[if lt IE 9]>
    <script src="/assets/model/common/js/html5shiv.min.js"></script>
    <script src="/assets/model/common/js/respond.min.js"></script>
    <![endif]-->
</head>

<body>
<div class="layui-form" action="" style="padding: 20px;">
    <div class="layui-form-item">
        <div class="layui-inline">
            <label class="layui-form-label">审核</label>
            <div class="layui-input-inline">
                <select name="examine_status">

                </select>
            </div>
        </div>
        <input type="hidden" name="field" value="examine_status">
        <div class="layui-inline">
            <div class="layui-input-block">
                <button type="submit" class="layui-btn" lay-submit="" lay-filter="submit_btn" >立即提交</button>
            </div>
        </div>
        
    </div>
</div>
<div class="layui-form" action="" style="padding: 20px;">
    <div class="layui-form-item">
        <div class="layui-inline">
            <label class="layui-form-label">申请</label>
            <div class="layui-input-inline">
                <select name="apply_status">

                </select>
            </div>
        </div>
        <input type="hidden" name="field" value="apply_status">
        <div class="layui-inline">
            <div class="layui-input-block">
                <button type="submit" class="layui-btn" lay-submit="" lay-filter="submit_btn">立即提交</button>
            </div>
        </div>
        
    </div>
<!--     <div class="layui-form-item">
        <div class="layui-input-block">
            <button type="submit" id="submit_examine" class="layui-btn" lay-submit="" lay-filter="submit_btn">立即提交</button>
        </div>
    </div> -->
</div>
<div class="table_wrap" style="padding: 0 15px;">
    <table id="idTest" lay-filter="demo" class="layui-table"></table>
</div>

<script>

    var layui_obj = layui.config({
        version: true,
        base: '/assets/model/'
    }).extend({
        common: 'common/js/common',
        search: 'common/js/search',
    }).use(['common','jquery','table','form'], function(){
        var table   = layui.table;
        var form   = layui.form;
        var $ = layui.jquery;
        var common = layui.common;
        var where = common.urlParam;
        var url = 'vip/propRebateList';

        initData();

        //监听提交
        form.on('submit(submit_btn)', function(data){
            // where.examine_status = data.field.examine_status;
            var check_data = table.checkStatus('idTest').data;
            var ids = [];
            if(check_data.length == 0){
                layer.msg('请选择返利');
                return false;
            }

            $.each(check_data,function(k,v){
                ids.push(v.id);
            })

            data.field.ids = ids;

            if(data.field.field == "examine_status"){
                var url = "vip/propRebateExamine";
            }else{
                var url = "vip/propRebateApply";
            }

            common.req({
                url: url,
                data: data.field,
                type: "post",
                dataType:"json",
                success:function(res){
                    if( res.code==0 ){
                        table.reload('idTest');
                    }else{
                        layer.msg(res.msg,{icon:2});
                    }
                },
                error:function(res){
                    layer.alert('错误'+res.msg,{icon:2});
                }
            });
            return false;
        });

        function initData(){
            common.req({
                url: 'vip/propRebateListConfig' //获取游戏名称
                ,success:function(json)
                {

                    var kf_source_data = [];

                    var base_config = json.data;

                    $.each(base_config.apply_status_arr,function(k,v){
                        $('select[name=apply_status]').append('<option value="'+k+'">'+v+'</option>');
                    });

                    $.each(base_config.examine_status_arr,function(k,v){
                        $('select[name=examine_status]').append('<option value="'+k+'">'+v+'</option>');
                    });

                    // 数据表格
                    table.render({
                        elem: '#idTest'
                        ,height: 'full-120'
                        ,url: common.getUrl(url) //数据接口
                        ,headers:common.getHeader()
                        ,page: true
                        ,limits:[20,50,100,200,500]
                        ,limit:20
                        ,minWidth:1000
                        ,autoWidth:true
                        ,where:where
                        ,method:'POST'
                        ,cols: [[ //表头
                            {checkbox: true, fixed: 'left'}
                            ,{field:'date', minWidth:90, sort: true, title:'日期'}
                            ,{field:'title', minWidth:120, title:'标题'}
                            ,{field:'content', minWidth:110, title:'内容'}
                            ,{field:'prop_id', minWidth:120, title:'道具id'}
                            ,{field:'apply_status', minWidth:110, title:'申请状态'}
                            ,{field:'examine', minWidth:100, title:'审核状态'}
                            ,{field:'examine_admin_name', minWidth:100, title:'审核人'}
                            ,{field:'examine_date', minWidth:100, title:'审核时间'}
                            ,{field:'add_date', minWidth:100, title:'添加时间'}
                            ,{field:'add_admin_name', minWidth:100, title:'添加人',}
                        ]]
                        ,done:function(a,b,c){
                            lay_page = b;
                            if(c > 0){

                            }
                        }
                    });
                    form.render();
                }
            });
        }
    });

</script>
</body>
</html>