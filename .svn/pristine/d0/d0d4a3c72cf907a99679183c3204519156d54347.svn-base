<div class="pageContent">
    <form method="post" action="/admin/admin/edit" class="pageForm required-validate" onsubmit="return validateCallback(this, dialogAjaxDone);">
        <div class="pageFormContent" layoutH="56">
            <input name="ids" type="hidden" value=" {{ admin['id'] }}">
            <p>
                <label>用户名：</label>
                {{ admin['username'] }}
            </p>
            <p>
                <label>真实名：</label>
                <input type="text" name="realname" size="30" class="required combox" value="{{ admin['realname'] }}" autocomplete="off">
            </p>
            <p>
                <label>密码：</label>
                <input type="password" name="password" size="30"  value="">
            </p>
            <p>
                <label>是否超管理员：</label>
                <input type="radio" name="is_admin" size="30" value="0" {{ admin['is_admin'] == 0 ? 'checked' : '' }}>客服
                <input type="radio" name="is_admin" size="30" value="1" {{ admin['is_admin'] == 1 ? 'checked' : '' }}>管理员
                <input type="radio" name="is_admin" size="30" value="2" {{ admin['is_admin'] == 2 ? 'checked' : '' }}>助理
            </p>
        </div>
        <div class="formBar">
            <ul>
                <li><div class="buttonActive"><div class="buttonContent"><button type="submit" >保存</button></div></div></li>
                <li>
                    <div class="button"><div class="buttonContent"><button type="button" class="close">取消</button></div></div>
                </li>
            </ul>
        </div>
    </form>
</div>

