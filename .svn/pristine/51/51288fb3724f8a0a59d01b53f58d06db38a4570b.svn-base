        }

        $time = time();
        $key = 'c1b5d4dc0084b4db0af583f8d399d980';
        $sign = md5($sdkid.$time.$key);
        $post_data = [
            'uid'  => $sdkid,
            'time' => $time,
            'sign' => $sign,
            'type' => 2
        ];

	    $res = $this->fetchUrl($this->sdkid_to_uid_url.'?'.http_build_query($post_data));
