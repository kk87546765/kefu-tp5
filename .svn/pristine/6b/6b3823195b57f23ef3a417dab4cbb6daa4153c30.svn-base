<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8"/>
    <meta name="renderer" content="webkit">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <meta name="apple-mobile-web-app-status-bar-style" content="black">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="format-detection" content="telephone=no">
    <title>后台管理系统</title>
    <link rel="stylesheet" href="/assets/vendor/layui/css/layui.css"/>
    <link rel="stylesheet" href="/assets/model/common/css/style.css"/>
    <link rel="stylesheet" href="/assets/model/common/css/common.css"/>
    <!--[if lt IE 9]>
    <script src="/assets/model/common/js/html5shiv.min.js"></script>
    <script src="/assets/model/common/js/respond.min.js"></script>
    <![endif]-->
    <style>
        .layui-col-space15 {
            /* margin: -7.5px; */
            margin:-7.5px 0 !important;
        }
    </style>
</head>
<body>
<div style="padding: 12px;"  class="search_wrap">
    <form class="layui-form" action="">

        <div class="layui-inline" style="margin-bottom: 6px;">
            <label class="layui-form-label">类型: </label>
            <div class="layui-input-inline">
                <select name="type"  lay-filter="type" id="type" >


                </select>
            </div>
        </div>

        <div class="layui-inline" style="margin-bottom: 6px;">
             <label class="layui-form-label">账号: </label> 
            <div class="layui-input-inline">
                <input type="text" name="account" id="account" value="" class="layui-input" >
            </div>
        </div>
        <div class="layui-inline" style="margin-bottom: 6px;">
            <label for="search">
            <div class="layui-btn layui-btn-sm" >搜索</div>
            </label>
        </div>

    </form>
</div>
<div class="layui-btn-group demoTable" style="padding: 0 15px; ">
    <button class="layui-btn layui-btn-sm" data-type="search" style="display: none" id="search">搜索</button>
</div>

<div id="info"></div>


 <script type="text/html" id="barDemo"> 
     <a class="layui-btn layui-btn layui-btn-xs" lay-event="edit">编辑</a> 
     <a class="layui-btn layui-btn-danger layui-btn-xs" lay-event="del">删除</a> 
 </script>

<script type="text/javascript" src="/assets/vendor/layui/layui.js"></script>
<script>
    layui.config({
        version: true,
        base: '/assets/model/'
    }).extend({
        common: 'common/js/common',
    }).use(['common','jquery','form','common'], function () {
        var $ = layui.jquery,
            form = layui.form,
            common = layui.common,
            layer = layui.layer,
            element = layui.element; //Tab的切换功能，切换事件监听等，需要依赖element模块


        function search(){
            $('#search').click()
        }



        common.req({
            url: 'account_search/getType' //获取查询类型
            ,success:function(json)
            {
                if (json.code == 0) {
                    var type_str = '';

                    //循环产品类型
                    $.each(json.data['type'], function (i, t) {

                        type_str += '<option value="' + t.value + '">' + t.name + '</option>';
                    });

                    if (type_str) {
                        $('#type').append(type_str);
                    }
                    form.render();
                } else {
                    layer.msg(json.msg, {icon: 2});
                }
            }
        });


        $('body').on('click', '.user_login_log', function () {
            var uid = $(this).attr('data-uid');
            var platform_id = $(this).attr('data-platform-id');

            common.open({

                type: 2,
                title: "用户日志",
                maxmin: true,
                shadeClose: true, //点击遮罩关闭层
                area: ['90%', '50%'],
                content: "user_login_log_view.html?uid=" + uid + "&platform_id=" + platform_id
            });
        })


        $('body').on('click', '.pay_log', function () {
            var uid = $(this).attr('data-uid');
            var platform_id = $(this).attr('data-platform-id');

            layer.open({
                type: 2,
                title: "充值记录",
                maxmin: true,
                shadeClose: true, //点击遮罩关闭层
                area : ['100%' , '50%'],
                content: "pay_log_view.html?uid="+uid+"&platform_id="+platform_id
            });
        })

        $('body').on('click', '.kefu_log', function () {
            var uid = $(this).attr('data-uid');
            var platform_id = $(this).attr('data-platform-id');

            layer.open({
                type: 2,
                title: "客服操作记录",
                maxmin: true,
                shadeClose: true, //点击遮罩关闭层
                area : ['100%' , '50%'],
                content: "kefu_log_view.html?uid="+uid+"&platform_id="+platform_id
            });
        })



        $('.demoTable .layui-btn').on('click', function () {
            var type = $(this).data('type');
            if (type == 'search') {
                //搜索
                var type = $('#type').val(),
                    value = $('#account').val();
                $('#info').html('查询中，请稍等.......')

                common.req({
                    url: 'account_search/index',
                    data: {type: type, account: value},
                    success:function(json) {

                        if (json.code == 0) {

                            var html = '';
                            $.each(json.data, function (index, v) {
                                $.each(v, function (index, v2) {


                                    html += '<div class="table_wrap" style="padding: 0px 15px;" >';
                                    html += ' <div class="layui-tab layui-tab-card" lay-filter="demo">';
                                    html += '       <ul class="layui-tab-title">';
                                    html += '            <li class="layui-this" lay-id="0">用户信息</li>';
                                    html += '            <li lay-id="1" class="user_login_log" data-uid = "'+v2.uid+'" data-platform-id="'+v2.platform_id+'">用户日志</li>';
                                    html += '            <li lay-id="2" class="pay_log" data-uid = "'+v2.uid+'" data-platform-id="'+v2.platform_id+'"">充值记录</li>';
                                    html += '            <li lay-id="3" class="kefu_log" data-uid = "'+v2.uid+'" data-platform-id="'+v2.platform_id+'"">客服操作记录</li>';

                                    html += '        </ul>';
                                    html += '        <div class="layui-tab-content" >';
                                    html += '            <div class="layui-tab-item layui-show" >';
                                    html += '               <div>游戏信息：</div>';
                                    html += '                <div class="layui-text layui-row layui-col-space10">';
                                    html += '                   <div class="layui-col-md3 layui-col-md-offset1">用户UID:<span > ' + v2.uid + ' </span></div>';
                                    html += '                   <div class="layui-col-md3 layui-col-md-offset1">用户名:<span > ' + v2.user_name + ' </span></div>';
                                    html += '                   <div class="layui-col-md3 layui-col-md-offset1">联运平台:<span> ' + v2.platform_name + '</span></div>';
                                    html += '                   <div class="layui-col-md3 layui-col-md-offset1">用户类型:<span> ' + v2.platform_name + '</span></div>';
                                    html += '                   <div class="layui-col-md3 layui-col-md-offset1">绑定手机:<span> ' + v2.mobile + '</span></div>';
                                    html += '                   <div class="layui-col-md3 layui-col-md-offset1">渠道openid:<span ></span></div>';
                                    html += '                   <div class="layui-col-md3 layui-col-md-offset1">充值金额:<span> ' + v2.total_pay + '</span></div>';
                                    html += '                   <div class="layui-col-md3 layui-col-md-offset1">单日最高累充:<span> ' + v2.day_hign_pay + '</span></div>';
                                    html += '                   <div class="layui-col-md3 layui-col-md-offset1">注册时间:<span > ' + v2.reg_date + '</span></div>';
                                    html += '                   <div class="layui-col-md3 layui-col-md-offset1">注册IP:<span > ' + v2.reg_ip + '</span></div>';
                                    html += '                   <div class="layui-col-md3 layui-col-md-offset1">最后登录时间:<span >' + v2.login_date + '</span></div>';
                                    html += '                   <div class="layui-col-md3 layui-col-md-offset1">最后登录IP:<span > ' + v2.login_ip + '</span></div>';
                                    html += '                </div>';
                                    html += '                <div >实名信息：</div>';
                                    html += '                <div class="layui-text layui-row">';
                                    html += '                    <div class="layui-col-md3 layui-col-md-offset1">玩家姓名:<span> ' + v2.real_name + '</span></div>';
                                    html += '                    <div class="layui-col-md3 layui-col-md-offset1">身份证号码:<span> ' + v2.id_card + '</span></div>';
                                    html += '                    <div class="layui-col-md3 layui-col-md-offset1">实名时间:<span> ' + v2.real_name_time + '</span></div>';
                                    html += '                </div>';
                                    html += '                <div style="margin-bottom:5%"></div>';
                                    html += '                <button class="layui-btn change_password" data-id="' + v2.uid + '" data-platform-id="' + v2.platform_id + '">修改密码</button>';
                                    html += '                <button class="layui-btn ban" data-id="' + v2.uid + '" data-platform-id="' + v2.platform_id + '">封禁</button>';
                                    html += '                <button class="layui-btn role_list" data-id="' + v2.uid + '" data-platform-id="' + v2.platform_id + '">玩家游戏列表</button>';
                                    html += '            </div>';
                                    html += '            <div class="layui-tab-item"></div>';
                                    html += '            <div class="layui-tab-item"></div>';
                                    html += '            <div class="layui-tab-item"></div>';
                                    html += '        </div>';
                                    html += '    </div>';
                                    html += '</div>';
                                });
                            });
                            $('#info').html(html)
                            // layer.msg(res.msg,{icon:1});
                        } else {
                            layer.msg(json.msg, {icon: 2});
                        }
                    }

                });



            }
        });


        // element.tabChange('demo', 3);
        // element.on('tab(demo)', function(data){
        //     if(data.index == 0){
        //         alert(0)
        //     }
        //     if(data.index == 1){
        //
        //     }
        //     if(data.index == 2){
        //         alert(2)
        //     }
        //     if(data.index == 3){
        //         alert(3)
        //     }
        //     // console.log(data)
        //     // console.log(this);
        // })

        $('body').on('click', '.change_password', function () {
            var uid = $(this).attr('data-id');
            var platform_id = $(this).attr('data-platform-id');
            common.open({
                type: 2,
                title: "修改密码",
                maxmin: true,
                shadeClose: true, //点击遮罩关闭层
                area: ['50%', '70%'],
                content: "change_password_view.html?uid=" + uid + "&platform_id=" + platform_id
            });
        })

        $('body').on('click', '.role_list', function () {
            var uid = $(this).attr('data-id');
            var platform_id = $(this).attr('data-platform-id');
            common.open({
                type: 2,
                title: "玩家角色列表",
                maxmin: true,
                shadeClose: true, //点击遮罩关闭层
                area: ['90%', '50%'],
                content: "role_list_view.html?uid=" + uid + "&platform_id=" + platform_id
            });
        })


        $('body').on('click', '.ban', function () {

            var uid = $(this).attr('data-id');
            var platform_id = $(this).attr('data-platform-id');

            layer.confirm('是否对用户进行封禁', function (index) {
                layer.close(index);


                common.req({
                    url: 'account_search/banUser', //获取查询类型
                    data: { uid:uid ,platform_id:platform_id },
                    success:function(res){
                        if( res.code == 0 ){
                            layer.msg(res.msg,{icon:1});
                        }else{
                            layer.msg(res.msg,{icon:2});
                        }
                    },
                });
            });
        });
    });




    // function show_pay_log(uid,platform_id){
    //     layer.open({
    //         type: 2,
    //         title: "充值记录",
    //         maxmin: true,
    //         shadeClose: true, //点击遮罩关闭层
    //         area : ['100%' , '50%'],
    //         content: "account_search/pay_log?uid="+uid+"&platform_id="+platform_id
    //     });
    // }





</script>
</body>
</html>