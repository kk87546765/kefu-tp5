<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8"/>
    <meta name="renderer" content="webkit">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <meta name="apple-mobile-web-app-status-bar-style" content="black">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="format-detection" content="telephone=no">
    <title>后台管理系统</title>
    <link rel="stylesheet" href="/assets/vendor/layui/css/layui.css"/>
    <link rel="stylesheet" href="/assets/model/common/css/style.css"/>
    <link rel="stylesheet" href="/assets/model/common/css/common.css"/>
    <script type="text/javascript" src="/assets/vendor/layui/layui.js"></script>
    <!--[if lt IE 9]>
    <script src="/assets/model/common/js/html5shiv.min.js"></script>
    <script src="/assets/model/common/js/respond.min.js"></script>
    <![endif]-->
</head>
<style>
    .layui-form-label{
        min-width: 130px;
    }
</style>
<body class="hold-transition skin-blue sidebar-mini">
<div class="page-loading">
    <div class="ball-loader">
        <span></span><span></span><span></span><span></span>
    </div>
</div>
<div>
    <form class="layui-form" lay-filter="edit-form" action="" style="padding: 20px;">

        <div class="layui-form-item">
            <label class="layui-form-label">游戏名称</label>
            <div class="layui-input-inline">
                <input type="text" name="game_name" lay-verify="required" value="" autocomplete="off" class="layui-input">
            </div>
        </div>
        <div class="layui-form-item">
            <label class="layui-form-label">游戏代号</label>
            <div class="layui-input-inline">
                <input type="text" name="game_code" lay-verify="required" value="" autocomplete="off" class="layui-input">
            </div>
        </div>

        <div class="layui-form-item">
            <label class="layui-form-label">接口KEY</label>
            <div class="layui-input-inline">
                <input type="text" name="key" lay-verify="required" value="" autocomplete="off" class="layui-input">
            </div>
        </div>

        <div class="layui-form-item p_lev1">
            <label class="layui-form-label">是否需要转换uid</label>
            <div class="layui-input-inline">
                <input type="radio" name="config[need_change_uid]" checked  value="0" title="不需要" class="config">
                <input type="radio" name="config[need_change_uid]" value="1" title="需要" class="config">
            </div>
        </div>

        <div class="layui-form-item p_lev1">
            <label class="layui-form-label">是否直接对接平台</label>
            <div class="layui-input-inline">
                <input type="radio" name="config[is_direct_game]"  checked value="1" title="是" class="config">
                <input type="radio" name="config[is_direct_game]" value="0" title="否" class="config">
            </div>
        </div>

        <div class="layui-form-item p_lev1">
            <label class="layui-form-label">是否支持角色封禁</label>
            <div class="layui-input-inline">
                <input type="radio" name="config[batch_block]" checked value="1" title="是" class="config">
                <input type="radio" name="config[batch_block]" value="0" title="否" class="config">
            </div>
        </div>

        <div class="layui-form-item p_lev1">
            <label class="layui-form-label">是否开启自动封禁</label>
            <div class="layui-input-inline">
                <input type="radio" name="config[auto_block]" checked value="1" title="是" class="config">
                <input type="radio" name="config[auto_block]" value="0" title="否" class="config">
            </div>
        </div>

        <div class="layui-form-item p_lev1">
            <label class="layui-form-label">是否开启行为封禁</label>
            <div class="layui-input-inline">
                <input type="radio" name="config[auto_action_block]" checked value="1" title="是" class="config" >
                <input type="radio" name="config[auto_action_block]" value="0" title="否" class="config">
            </div>
        </div>

        <div class="layui-form-item p_lev1">
            <label class="layui-form-label">是否开启上下文封禁</label>
            <div class="layui-input-inline">
                <input type="radio" name="config[auto_merge_block]"  value="1" title="是" class="config">
                <input type="radio" name="config[auto_merge_block]" checked value="0" title="否" class="config">
            </div>
        </div>

        <div class="layui-form-item p_lev1">
            <label class="layui-form-label">是否对接cp的文档（走cp的统一接口，内容写在游戏类中）</label>
            <div class="layui-input-inline">
                <input type="radio" name="config[need_cp_deal]" value="1" title="是" class="config">
                <input type="radio" name="config[need_cp_deal]"  checked  value="0" title="否" class="config">
            </div>
        </div>



        <div class="layui-inline " style="margin-bottom: 6px;">
            <label class="layui-form-label">类型 </label>
            <div class="layui-input-inline">
                <select name="type"  lay-filter="type" id="type" lay-search="" >
                    <option selected='selected' value="2">模式二（sdk封禁+cp封禁）</option>
                    <option value="1">模式一（sdk封禁+踢下线）</option>
                </select>
            </div>
        </div>


        <div class="layui-form-item p_lev1">
            <label class="layui-form-label">状态</label>
            <div class="layui-input-inline">
                <input type="radio" name="status" value="1"checked  title="开启" >
                <input type="radio" name="status" value="0" title="不启用">
            </div>
        </div>

        <div class="layui-form-item">
            <label class="layui-form-label">账号封(解)禁接口</label>
            <div class="layui-input-inline" style="width:400px;">
                <input type="text" name="config[block_url]"  value="" autocomplete="off" placeholder="http://" class="layui-input config">
            </div>
        </div>

        <div class="layui-form-item">
            <label class="layui-form-label">ip封(解)禁接口</label>
            <div class="layui-input-inline" style="width:400px;">
                <input type="text" name="config[ip_url]"  value="" autocomplete="off" placeholder="http://" class="layui-input config">
            </div>
        </div>

        <div class="layui-form-item">
            <label class="layui-form-label">聊天封(解)禁接口</label>
            <div class="layui-input-inline" style="width:400px;">
                <input type="text" name="config[chat_url]"  value="" autocomplete="off" placeholder="http://" class="layui-input config">
            </div>
        </div>

        <div class="layui-form-item">
            <label class="layui-form-label">踢下线接口</label>
            <div class="layui-input-inline" style="width:400px;">
                <input type="text" name="config[loginout_url]"  value="" autocomplete="off" placeholder="http://" class="layui-input config">
            </div>
        </div>

        <div class="layui-form-item">
            <label class="layui-form-label">角色封(解)禁接口</label>
            <div class="layui-input-inline" style="width:400px;">
                <input type="text" name="config[role_block_url]"  value="" autocomplete="off" placeholder="http://" class="layui-input config">
            </div>
        </div>

        <div class="layui-form-item">
            <label class="layui-form-label">区服列表接口</label>
            <div class="layui-input-inline" style="width:400px;">
                <input type="text" name="config[server_list]"  value="" autocomplete="off" placeholder="http://" class="layui-input config" >
            </div>
        </div>


        <div class="layui-form-item">
            <label class="layui-form-label">自动禁言每次累加值(小时)</label>
            <div class="layui-input-inline" >
                <input type="text" name="config[chat_time_limit]"  value="" autocomplete="off"  class="layui-input config" >
            </div>
        </div>



        <input type="hidden" name="id" value="">

        <div class="layui-form-item">
            <div class="layui-input-block">
              <button type="submit" class="layui-btn layui-power" id="Sysmanage-gameAdd" lay-submit="" lay-filter="submit_btn">立即提交</button>
              <button type="submit" class="layui-btn layui-power" id="Sysmanage-gameEdit" lay-submit="" lay-filter="submit_btn">保存</button>
            </div>
        </div>
    </form>
</div>
<script>
    var layui_obj = layui.config({
        version: true,
        base: '/assets/model/'
    }).extend({
        common: 'common/js/common',
    }).use(['common','form','jquery'], function(){
        var form = layui.form;
        var common = layui.common;
        var $ = layui.jquery;
        var id = common.urlParam.id;
        var p_url = 'Sysmanage/gameAdd';
        var detail_url = 'Sysmanage/gameDetail';

        console.log(id)
        if(id > 0){
            p_url = 'Sysmanage/gameEdit';
            //初始化权限显示
            common.initPowerShow(['Sysmanage-gameEdit']);
        }else{
            //初始化权限显示
            common.initPowerShow(['Sysmanage-gameAdd']);
        }




        //初始化页面数据
        initData();




        //监听提交
        form.on('submit(submit_btn)', function(data){
            console.log(data)
            common.req({
                url: p_url,
                data: data.field,
                type: "post",
                dataType:"json",
                success:function(res){
                    console.log(res);
                    if( res.code==0 ){
                        var index = parent.layer.getFrameIndex(window.name);
                        window.parent.res_msg(res.msg);
                        parent.layer.close(index);//关闭当前页
                        //window.parent.location.reload(); //刷新父窗口
                    }
                },
                error:function(res){
                    layer.alert('错误'+res.msg,{icon:2});
                }
            });
            return false;
        });


        function initData(){

            if(id>0){
                common.req({
                    url: detail_url,
                    data: {'id':id},
                    type: "post",
                    dataType:"json",
                    success:function(res){

                        if( res.code==0 ){

                            common.isLoading(false);

                            // res.data
                            form.val('edit-form',res.data);

                            var new_key_arr = {};
                            var re = /(?<=\[)[^\]]+/;
                            // console.log( res.data);
                            $.each($(".config"),(k,v)=>{

                                 new_key_arr[$(v).attr('name')] = res.data['config'][$(v).attr('name').match(re)[0]]

                            })
                            console.log(new_key_arr);

                            form.val('edit-form',new_key_arr);


                        }else{
                            layer.alert('错误'+res.msg,{icon:2});
                        }
                    },
                    error:function(res){
                        layer.alert('错误'+res.msg,{icon:2});
                    }
                });
            }else{
                common.isLoading(false);
            }
            
        }

    });
</script>
</body>
</html>