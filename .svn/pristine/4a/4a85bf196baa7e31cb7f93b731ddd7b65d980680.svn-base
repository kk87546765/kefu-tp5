<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8"/>
    <meta name="renderer" content="webkit">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <meta name="apple-mobile-web-app-status-bar-style" content="black">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="format-detection" content="telephone=no">
    <title>后台管理系统</title>
    <link rel="stylesheet" href="/assets/vendor/layui/css/layui.css"/>
    <link rel="stylesheet" href="/assets/model/common/css/style.css"/>
    <link rel="stylesheet" href="/assets/model/common/css/common.css"/>
    <script type="text/javascript" src="/assets/vendor/layui/layui.js"></script>
    <!--[if lt IE 9]>
    <script src="/assets/model/common/js/html5shiv.min.js"></script>
    <script src="/assets/model/common/js/respond.min.js"></script>
    <![endif]-->
</head>

<body>
<!-- 加载动画 -->
<div class="page-loading">
    <div class="ball-loader">
        <span></span><span></span><span></span><span></span>
    </div>
</div>

<div class="layui-card">
    <div style="padding: 12px;"  class="search_wrap">
        <form class="layui-form toolbar" action="">
            <div class="layui-inline" style="margin-bottom: 6px;">
                <label class="layui-form-label">平台名称: </label>
                <div class="layui-input-inline">
                    <input class="layui-input" type="input" name="name" placeholder="请输入">
                </div>
            </div>
        </form>
    </div>
    <div class="layui-btn-group demoTable" style="padding: 0 15px;">
        <button id="Sysmanage-gameList" class="layui-btn layui-btn-sm layui-power" data-type="search">搜索</button>
        <button id="Sysmanage-gameAdd" class="layui-btn layui-btn-sm layui-power" data-type="add">添加</button>
        <!-- <button type="button" class="layui-btn layui-btn-sm layui-btn-danger" data-type="del"><i class="layui-icon"></i> 批量删除</button> -->
    </div>
</div>

<div class="table_wrap layui-card" style="padding: 0 15px;">
    <table id="idTest" lay-filter="demo" class="layui-table"></table>
</div>



<script>
    var layui_obj = layui.config({
        version: true,
        base: '/assets/model/'
    }).extend({
        common: 'common/js/common',
    }).use(['common','table','form','jquery'], function(){
        var table   = layui.table;
        var form = layui.form;
        var common = layui.common;
        var $ = layui.jquery;

        //初始化权限显示
        common.initPowerShow(['Sysmanage-gameAdd','Sysmanage-gameList']);

        //初始化页面数据
        initData();
        
        //监听工具条
        table.on('tool(demo)', function(obj){
            var data = obj.data;
            if(obj.event === 'detail'){

                if(!common.hasPower('Sysmanage-gameDetail')){
                    layer.msg('没有权限');
                    return false;
                }
                var title='编辑';
                var url = '/view/sysmanage/game_detail.html?id='+data.id;

                common.open({
                    type: 2,
                    title: title+'详情',
                    maxmin: true,
                    shadeClose: true, //点击遮罩关闭层
                    area : ['70%' , '70%'],
                    content: url
                });
            }else if(obj.event === 'del'){
                if(!common.hasPower('Sysmanage-gameDel')){
                    layer.msg('没有权限');
                    return false;
                }
                layer.confirm('真的删除行么', function(index){
                    layer.close(index);
                    common.req({
                        url: "Sysmanage/gameDel",
                        data: { id: data.id },
                        type: "post",
                        dataType:"json",
                        success:function(res){
                            if( res.code==0 ){
                                obj.del();
                                layer.msg(res.msg,{icon:1});
                            }else{
                                layer.msg(res.msg,{icon:2});
                            }
                        },
                        error:function(data){
                            layer.alert('错误'+data.msg,{icon:2});
                        }
                    });

                });
            }
        });
        //绑定事件
        $('.demoTable .layui-btn').on('click', function(){
            var type = $(this).data('type');
            if( type=='add' ){

                if(!common.hasPower('Sysmanage-platformAdd')){
                    layer.msg('没有权限');
                    return false;
                }
                //添加
                common.open({
                    type: 2,
                    title: "添加",
                    maxmin: true,
                    shadeClose: true, //点击遮罩关闭层
                    area : ['70%' , '70%'],
                    content: "/view/sysmanage/game_detail.html"
                });
            }else if( type=='search' ){
                //搜索
                var pdata = {};
                    pdata.name     = $('input[name="name"]').val();              

                table.reload('idTest', {
                    method: 'post'
                    ,where: pdata
                    ,page: {
                        curr: 1
                    }
                });
            }
        });

        function initData(){
            table.render({
                elem: '#idTest'
                ,height: 'full-120'
                ,url: common.apiUrl+'Sysmanage/gameList' //数据接口
                ,headers: common.getHeader()
                ,page: true //开启分页
                ,limits:[20,50,100,200,500]
                ,limit:20
                ,minWidth:1000
                ,method:'post'
                ,cols: [[ //表头
                    {field:'game_name', width:120, sort: true, title:'游戏名'}
                    ,{field:'game_code', width:120, title:'游戏代码'}
                    ,{field:'admin_id', minWidth:150, title:'添加人'}
                    ,{field:'add_time', minWidth:150, title:'添加时间'}
                    ,{field:'status', width:80, title:'状态'}
                    // ,{field:'edit_user_id_name', minWidth:50, title:'最后修改人'}
                    // ,{field:'edit_time', minWidth:150, title:'最后修改时间'}
                    ,{minWidth:80, align:'center', fixed: 'right', title:'操作'
                    ,templet:function(d){
                            let str = '';
                            console.log(d)
                            if(d.action && d.action.length>0){
                                $.each(d.action,function(k,v){
                                    str+= action(v);
                                })
                            }
                            return str;
                        }
                    }
                ]]
                ,done:(a,b,c)=>{
                    common.isLoading(false);
                }
            });
        }
    });
    //给子级调用
    function res_msg(msg){
        layer.msg(msg,{icon:1});
        setTimeout(function(){
            window.location.reload();
        },1000);
    }

    function action(action,data){

        let str = '';
        switch (action) {
            case 'gameDetail':
                str = '<a class="layui-btn layui-btn-xs" lay-event="detail">详情</a>';
                break;
            case 'gameDel':
                str = '<a class="layui-btn layui-btn-xs" lay-event="del">删除</a>';
                break;
            
            default:

                break;
        }

        return str;
    }
</script>
</body>
</html>