<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8"/>
    <meta name="renderer" content="webkit">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <meta name="apple-mobile-web-app-status-bar-style" content="black">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="format-detection" content="telephone=no">
    <title>后台管理系统</title>
    <link rel="stylesheet" href="/assets/vendor/layui/css/layui.css"/>
    <link rel="stylesheet" href="/assets/model/common/css/style.css"/>
    <link rel="stylesheet" href="/assets/model/common/css/common.css"/>
    <!--[if lt IE 9]>
    <script src="/assets/model/common/js/html5shiv.min.js"></script>
    <script src="/assets/model/common/js/respond.min.js"></script>
    <![endif]-->
    <style>
        .layui-col-space15 {
            /* margin: -7.5px; */
            margin:-7.5px 0 !important;
        }
    </style>
</head>
<body class="hold-transition skin-blue sidebar-mini">
<form class="layui-form" action="" style="padding: 20px;">

    <div class="layui-tab">

       <div class="layui-tab-content">

           <div class="layui-block" style="margin-bottom: 6px;">
               <label class="layui-form-label">运营商: </label>
               <div class="layui-input-inline">
                   <select name="sms_type"  lay-filter="sms_type" id="sms_type" lay-search="">
                       <option value="">选择或搜索</option>
                   </select>
               </div>
           </div>


           <div class="layui-block" style="margin-bottom: 6px;">
               <label class="layui-form-label">模板: </label>
               <div class="layui-input-inline">
                   <select name="template_id"  lay-filter="template_id" id="template_id" lay-search="">
                       <option value="">选择或搜索</option>
                   </select>
               </div>
           </div>


           <div class="layui-block" style="margin-bottom: 6px;">
               <label class="layui-form-label">签名: </label>
               <div class="layui-input-inline">
                   <select name="sign"  lay-filter="sign" id="sign" lay-search="">
                       <option value="">选择或搜索</option>
                   </select>
               </div>
           </div>


           <div class="layui-tab-item layui-show">
               <label class="layui-form-label">手机号码</label>
               <div class="layui-input-inline">
                   <textarea placeholder="输入手机号码，多个手机回车换行"  id='phone' name="phone" rows="10" cols="50" ></textarea>
               </div>
           </div>

           <div class="layui-tab-item layui-show" style="margin-top: 1%">
               <label class="layui-form-label">变量</label>
               <div class="layui-input-inline">
                   <textarea placeholder="输入变量，多个请换行"  lay-filter="params" id='params' name="params" rows="5" cols="20" ></textarea>
               </div>
           </div>

           <div class="layui-tab-item layui-show" style="margin-top: 1%">
               <div class="layui-input-inline">
                   <span id="template_content"></span>
               </div>
           </div>
       </div>
    </div>

    <div class="layui-form-item">
        <div class="layui-input-block">
            <button type="submit" class="layui-btn" lay-submit="" lay-filter="submit_btn">立即提交</button>
        </div>
    </div>
</form>
<script type="text/javascript" src="/assets/vendor/layui/layui.js"></script>
<script>
    var sms = {};
    var sms_type = {};
    var template = '';
    var sign = {};
    layui.config({
        version: true,
        base: '/assets/model/'
    }).extend({
        common: 'common/js/common',

    }).use(['table','laydate','jquery','common','form'], function(){
        var table   = layui.table,
            $   = layui.jquery,
            form   = layui.form,
            common   = layui.common,
            laydate = layui.laydate;

        $('#template_content').html('');
        $('#phone').val('');
        common.req({
            url:'sms/getSmsType'
            ,success:function(json)
            {
                if(json.code == 0){
                    console.log(json.data)
                    let html = '';
                    // sms = json.data;
                    $.each(json.data,function(k,v){
                        sms[v.code] = {'template':v.template,'sign':v.sign}
                        html ='<option value="'+v.code+'">'+v.name+'</option>';
                        $('#sms_type').append(html)
                    })

                    form.render('select');

                }else {
                    layer.msg(json.msg,{icon:2});
                }
            }
        })


        $('#params').blur(function(){
            let params = this.value.split("\n");
            if(template != undefined){
                $.each(params,function(k,v){

                    var b = template.replace("{"+k+"}",v)
                    template = b;
                })

                $('#template_content').html(template)
            }

        })

        form.on('select(sms_type)', function(data){
            let code = data.value;
            if(code == ''){
                $('#template_id').empty();
            }else{
                let html = '';
                $.each(sms[code].template,function(k,v){
                    sms_type[k] = v.content;

                    html ='<option value="'+k+'">'+v.type+'</option>';
                    $('#template_id').append(html)
                })
            }

            let html2 = '';
            $.each(sms[code].sign,function(k,v){
                html ='<option value="'+v+'">'+v+'</option>';
                $('#sign').append(html)
            })


            form.render('select');



        });


        form.on('select(template_id)', function(data){
            $('#template_content').html('')
            template = sms_type[data.value];
            $('#template_content').html(template)

        });

        //监听提交
        form.on('submit(submit_btn)', function(data){
            common.req({
                url: "sms/sms",
                data: data.field,
                type: "post",
                dataType:"json",
                success:function(data){
                    if( data.code == 0 ){
                        layer.msg(data.msg,{icon:1});
                    }else{
                        layer.msg(data.msg,{icon:2});
                    }
                },
                error:function(data){
                    layer.alert('错误'+data.msg,{icon:2});
                }
            });
            return false;
        });

    });
</script>
</body>
</html>