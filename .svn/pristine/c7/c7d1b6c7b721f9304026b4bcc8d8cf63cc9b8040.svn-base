<div class="pageContent">
    <form method="post" action="/admin/admin/repassword" class="pageForm required-validate" onsubmit="return validateCallback(this, dialogAjaxDone);">
        <div class="pageFormContent" layoutH="56">
            <p>
                <label>用户名：</label>
                {{ username }}
            </p>
            <p>
                <label>原密码：</label>
                <input type="password" name="oldpassword" size="30" class="required alphanumeric" minlength="6" maxlength="20" value="">
            </p>
            <p>
                <label>密码：</label>
                <input type="password" name="password" size="30" class="required alphanumeric" minlength="6" maxlength="20" value="">
            </p>
            <p>
                <label>确认密码：</label>
                <input type="password" name="repassword" size="30" class="required alphanumeric" minlength="6" maxlength="20" value="">
            </p>
        </div>
        <div class="formBar">
            <ul>
                <li><div class="buttonActive"><div class="buttonContent"><button type="submit" >保存</button></div></div></li>
                <li>
                    <div class="button"><div class="buttonContent"><button type="button" class="close">取消</button></div></div>
                </li>
            </ul>
        </div>
    </form>
</div>

