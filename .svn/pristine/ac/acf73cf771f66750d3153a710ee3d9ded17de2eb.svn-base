<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8"/>
    <meta name="renderer" content="webkit">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <meta name="apple-mobile-web-app-status-bar-style" content="black">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="format-detection" content="telephone=no">
    <title>后台管理系统</title>
    <link rel="stylesheet" href="/assets/vendor/layui/css/layui.css"/>
    <link rel="stylesheet" href="/assets/model/common/css/style.css"/>
    <link rel="stylesheet" href="/assets/model/common/css/common.css"/>
    <script type="text/javascript" src="/assets/vendor/layui/layui.js"></script>
    <!--[if lt IE 9]>
    <script src="/assets/model/common/js/html5shiv.min.js"></script>
    <script src="/assets/model/common/js/respond.min.js"></script>
    <![endif]-->
</head>
<style>
    .laytable-cell-checkbox .layui-disabled.layui-form-checked i {
        background: #fff !important;
    }
</style>
<body>
<!-- 页面加载loading -->
<div class="page-loading">
    <div class="ball-loader">
        <span></span><span></span><span></span><span></span>
    </div>
</div>
<div style="padding: 12px;"  class="search_wrap">
    <form class="layui-form" action="">
        <!-- <div class="layui-inline" style="margin-bottom: 6px;">
            <label class="layui-form-label">平台名称: </label>
            <div class="layui-input-inline">
                <input type="input" name="name" class="layui-input" placeholder="请输入">
            </div>
        </div> -->
    </form>
</div>
<div class="layui-btn-group demoTable" style="padding: 0 15px;">
    <button class="layui-btn layui-btn-sm layui-power" id="WorkSheet-typeInputList" data-type="search">搜索</button>
    <button type="button" id="refresh" class="layui-btn layui-btn-sm" ew-event="refresh1">
        <i class="layui-icon layui-icon-refresh"></i>
    </button>
    <button class="layui-btn layui-btn-sm layui-power" id="WorkSheet-typeInputAdd" data-type="add">添加</button>
    <!-- <button type="button" class="layui-btn layui-btn-sm layui-btn-danger" data-type="del"><i class="layui-icon"></i> 批量删除</button> -->
</div>
<div class="table_wrap" style="padding: 0 15px;">
    <table id="idTest" lay-filter="demo" class="layui-table"></table>
</div>



<script>
    var work_sheet_type_id = 0;
    var p_data = {};
    var layui_obj = layui.config({
        version: true,
        base: '/assets/model/'
    }).extend({
        common: 'common/js/common',
    }).use(['common','jquery','table','form'], function(){
        var table   = layui.table;
        var form = layui.form;
        var $ = layui.jquery;
        var common = layui.common;
        var urlParam = common.urlParam;
        work_sheet_type_id = urlParam.work_sheet_type_id;

        p_data = common.merge(p_data,common.urlParam);

        common.initPowerShow([
            'WorkSheet-typeInputList'
            ,'WorkSheet-typeInputAdd'
        ]);

        table.render({
            elem: '#idTest'
            ,height: 'full-120'
            ,url: common.getUrl('work_sheet/typeInputList') //数据接口
            ,headers:common.getHeader()
            ,page: true //开启分页
            ,limits:[20,50,100,200,500]
            ,limit:20
            ,minWidth:1000
            ,autoWidth:true
            ,where:p_data
            ,method:'POST'
            ,cols: [[ //表头
                {field:'id', width:200, sort: true, title:'ID'}
                ,{field:'info', width:100, title:'配置名称'}
                ,{field:'menu_name', minWidth:80, title:'字段变量'}
                ,{field:'type', minWidth:80, title:'字段类型'}
                ,{field:'value', minWidth:150, title:'值'}
                ,{field:'status_str', minWidth:150, title:'是否显示'}
                ,{minWidth:80, align:'center', fixed: 'right', title:'操作'
                ,templet:function(d){
                        let str = '';
                        if(d.action && d.action.length>0){
                            $.each(d.action,function(k,v){
                                str+= action(v);
                            })
                        }
                        return str;
                    }
                }
            ]]
            ,done:function(e){
                common.isLoading();
            }
        });

        //监听工具条
        table.on('tool(demo)', function(obj){
            var data = obj.data;
            if(obj.event === 'del'){
                layer.confirm('真的删除行么', function(index){
                    layer.close(index);
                    $.ajax({
                        url: "work_sheet/del",
                        data: { ids: data.id },
                        type: "post",
                        dataType:"json",
                        success:function(res){
                            if( res.status==1 ){
                                obj.del();
                                layer.msg(res.msg,{icon:1});
                            }else{
                                layer.msg(res.msg,{icon:2});
                            }
                        },
                        error:function(data){
                            layer.alert('错误'+data.msg,{icon:2});
                        }
                    });

                });
            }else if(obj.event === 'detail'){
                var title='编辑';
                var url = 'type_input_detail.html?id='+data.id;

                layer.open({
                    type: 2,
                    title: title+'详情',
                    maxmin: true,
                    shadeClose: true, //点击遮罩关闭层
                    area : ['70%' , '70%'],
                    content: url
                });
            }
        });

        $('.demoTable .layui-btn').on('click', function(){
            var type = $(this).data('type');
            if( type=='add' ){
                //添加
                layer.open({
                    type: 2,
                    title: "添加",
                    maxmin: true,
                    shadeClose: true, //点击遮罩关闭层
                    area : ['70%' , '70%'],
                    content: "type_input_detail.html?work_sheet_type_id="+work_sheet_type_id
                });
            }else if( type=='search' ){
                //搜索
                // pdata.name     = $('input[name="name"]').val();

                table.reload('idTest', {
                    method: 'post'
                    ,where: pdata
                    ,page: {
                        curr: 1
                    }
                });
            }
        });

        form.on("checkbox(siam_all)", function () {
            var status = $(this).prop("checked");
            $.each($("input[name=siam_one]"), function (i, value) {
                $(this).prop("checked", status);
            });
            form.render();
        });

        
    });
    //给子级调用
    function res_msg(msg){
        layer.msg(msg,{icon:1});
        setTimeout(function(){
            layui_obj.table.reload('idTest');
        },1000);
    }

    function action(action,data){
        let str = '';
        switch (action) {
            case 'type_input_detail':
                str = '<a class="layui-btn layui-btn-xs" lay-event="detail">详情</a>';
                break;
            
            default:

                break;
        }

        return str;
    }
</script>
</body>
</html>