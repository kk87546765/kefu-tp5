<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8"/>
    <meta name="renderer" content="webkit">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <meta name="apple-mobile-web-app-status-bar-style" content="black">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="format-detection" content="telephone=no">
    <title>后台管理系统</title>
    <link rel="stylesheet" href="/assets/vendor/layui/css/layui.css"/>
    <link rel="stylesheet" href="/assets/model/common/css/style.css"/>
    <link rel="stylesheet" href="/assets/model/common/css/common.css"/>
    <script type="text/javascript" src="/assets/vendor/layui/layui.js"></script>
    <!--[if lt IE 9]>
    <script src="/assets/model/common/js/html5shiv.min.js"></script>
    <script src="/assets/model/common/js/respond.min.js"></script>
    <![endif]-->
</head>
<body>
<div style="padding: 12px;" class="search_wrap">
    <form class="layui-form" action="" id="search_form">
        <div class="layui-inline">
            <label class="layui-form-label">产品游戏</label>
            <div class="layui-input-inline">
                <input type="text" name="product_name" id="product_name" autocomplete="off" class="layui-input" value=>
            </div>
        </div>
        <div class="layui-inline">
            <label class="layui-form-label">返利标题</label>
            <div class="layui-input-inline">
                <input type="text" name="title" id="title" autocomplete="off" class="layui-input" value=>
            </div>
        </div>
        <div class="layui-inline">
            <label class="layui-form-label">返利内容</label>
            <div class="layui-input-inline">
                <input type="text" name="content" id="content" autocomplete="off" class="layui-input" value=>
            </div>
        </div>
        <div class="layui-inline">
            <label class="layui-form-label">道具id</label>
            <div class="layui-input-inline">
                <input type="text" name="prop_id" id="prop_id" autocomplete="off" class="layui-input" value=>
            </div>
        </div>
        <div class="layui-inline">
            <label class="layui-form-label">状态</label>
            <div class="layui-input-inline">
                <select name="status" id="status" lay-filter="status" lay-search="">
                    <option value="0">全部</option>
                    <option value="1" selected>开启</option>
                    <option value="2">关闭</option>
                </select>
            </div>
        </div>
    </form>
</div>
<div class="search-float-right">
    <div class="layui-btn-group demoTable">
        
        <a href=""><button class="layui-btn layui-btn-sm layui-power" id="VipConfig-rebateConfigList" data-type="search">搜索</button></a>
        <button class="layui-btn layui-btn-sm layui-power" id="VipConfig-rebateConfigList" data-type="search">搜索</button>
        <button type="button" class="layui-btn layui-btn-sm layui-btn-danger layui-power" id="VipConfig-batchDeleteRebate" data-type="change">
            <i class="layui-icon"></i> 批量删除
        </button>
        <span class="layui-power" id="VipConfig-rebateConfigImport">
            <button class="layui-btn layui-btn-sm"  data-type="add">一键导入</button>
            <a href="/assets/file/rebateConfigImportDemo.xlsx">
                <button class="layui-btn layui-btn-sm layui-bg-orange">导入模板</button>
            </a>
        </span>
        
    </div>
</div>

<div class="table_wrap" style="padding: 0 15px;">
    <table id="idTest" lay-filter="demo" class="layui-table"></table>
</div>


<script>
    var lay_page = 1;
    var where = {};
    var layui_obj = layui.config({
        version: true,
        base: '/assets/model/'
    }).extend({
        common: 'common/js/common',
    }).use(['common','jquery','table','laydate'], function(){
        var table   = layui.table,
            laydate = layui.laydate;
        var $ = layui.jquery;
        var common = layui.common;

        initData();
        //监听工具条
        table.on('tool(demo)', function(obj){
            var data = obj.data;
            if(obj.event === 'del'){
                var ids = [];
                    ids.push(data.id);
                layer.confirm('真的删除行么', function(index){
                    layer.close(index);
                    common.req({
                        url: "vip_config/batchDeleteRebate",
                        data: { ids: ids },
                        type: "post",
                        dataType:"json",
                        success:function(res){
                            if( res.code==0 ){
                                res_msg(res.msg); //刷新页面
                            }else{
                                layer.msg(res.msg,{icon:2});
                            }
                        },
                        error:function(data){
                            layer.alert('错误'+data.msg,{icon:2});
                        }
                    });

                });
            }
        });

        $('.demoTable .layui-btn').on('click', function(){
            var type = $(this).data('type');
            if( type=='add' ){
                //添加
                layer.open({
                    type: 2,
                    title: "批量添加",
                    maxmin: true,
                    shadeClose: true, //点击遮罩关闭层
                    area : ['80%' , '60%'],
                    content: "/view/vipwelfare/rebate_config_import.html"
                });
            }else if( type=='search' ){
                //搜索
                let form_data = $('#search_form').serializeArray();
                $.each(form_data,function(k,v){
                    where[v.name] = v.value;
                })
                table.reload('idTest', {
                    method: 'post'
                    , where: where
                    , page: {
                        curr: 1
                    }
                });
            }else if( type=='change' ){
                var checkStatus = table.checkStatus('idTest')
                    ,data = checkStatus.data;

                if( data.length<=0 ){
                    layer.msg("未选择任何行！",{icon:2});
                    return;
                }
                var ids = [];
                for( var i=0; i<data.length; i++ ){
                    ids.push(data[i]['id']);
                }
                layer.confirm('确定删除选中行吗？', function(index){
                    layer.close(index);
                    var url     = "vip_config/batchDeleteRebate";
                    common.req({
                        url: url,
                        data: { ids: ids },
                        type: "post",
                        dataType:"json",
                        success:function(res){
                            if( res.code==0 ){
                                res_msg(res.msg); //刷新页面
                            }else{
                                layer.msg(res.msg,{icon:2});
                            }
                        },
                        error:function(data){
                            layer.alert('错误'+data.msg,{icon:2});
                        }
                    });
                });
            }
        });

        function initData(){

            common.initPowerShow([
                'VipConfig-rebateConfigList'
                ,'VipConfig-rebateConfigImport'
                ,'VipConfig-batchDeleteRebate'
            ]);

            // 数据表格
            table.render({
                elem: '#idTest'
                ,height: 'full-120'
                ,url: common.getUrl('vip_config/rebateConfigList') //数据接口
                ,headers:common.getHeader()
                ,page: true
                ,limits:[20,50,100,200,500]
                ,limit:20
                ,minWidth:1000
                ,autoWidth:true
                ,method:'POST'
                ,cols: [[ //表头
                    {type:'checkbox', minWidth:40, fixed: 'left'}
                    ,{field:'id', minWidth:80, sort: true, title:"ID"}
                    ,{field:'product_name', minWidth:120, title:"产品游戏"}
                    ,{field:'title', minWidth:180, title:"返利标题"}
                    ,{field:'content', minWidth:250, title:"返利内容"}
                    ,{field:'prop_id', minWidth:80, title:"道具ID"}
                    ,{field:'status', minWidth:120, title:"状态"}
                    ,{field:'add_admin_name', minWidth:120, title:"添加用户"}
                    ,{field:'add_time', minWidth:180, title:"添加时间"}
                    ,{field:'edit_admin_name', minWidth:120, title:"修改用户"}
                    ,{field:'edit_time', minWidth:180, title:"修改时间"}
                    ,{minWidth:100, align:'center', fixed: 'right', title:'操作'
                        ,templet:function(d){
                            let str = '';
                            if(d.action && d.action.length>0){
                                $.each(d.action,function(k,v){
                                    str+= action(v);
                                })
                            }
                            return str;
                        }
                    }
                ]]
                ,done:function(a,b,c){
                    lay_page = b;
                    if(c > 0){

                    }
                }
            });
        }

    });
    //给子级调用
    function res_msg(msg){
        layer.msg(msg,{icon:1});
        setTimeout(function(){
            layui_obj.table.reload('idTest', {
                method: 'post'
                ,where: where
                ,page: {
                    curr: lay_page
                }
            });
        },1000);
    }
    function action(action,data){
        let str = '';
        switch (action) {
            case 'batchDeleteRebate':
                str = '<a class="layui-btn layui-btn-danger layui-btn-xs" lay-event="del">删除</a>';
                break;
            default:

                break;
        }
        return str;
    }
</script>
</body>
</html>

