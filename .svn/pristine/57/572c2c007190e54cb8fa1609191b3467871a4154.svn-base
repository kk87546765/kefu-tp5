<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8"/>
    <meta name="renderer" content="webkit">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <meta name="apple-mobile-web-app-status-bar-style" content="black">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="format-detection" content="telephone=no">
    <title>后台管理系统</title>
    <link rel="stylesheet" href="/assets/vendor/layui/css/layui.css"/>
    <link rel="stylesheet" href="/assets/model/common/css/style.css"/>
    <link rel="stylesheet" href="/assets/model/common/css/common.css"/>
    <script type="text/javascript" src="/assets/vendor/layui/layui.js"></script>
    <!--[if lt IE 9]>
    <script src="/assets/model/common/js/html5shiv.min.js"></script>
    <script src="/assets/model/common/js/respond.min.js"></script>
    <![endif]-->
</head>
<style type="text/css">
    #uid_model{
        position: relative;
    }

    #uid_model_user_check{
        position: absolute;
        left: 230px;
        top: 8px;
    }
    #uid_model_user_check p{
        min-width: 250px;
    }
</style>
<body class="hold-transition skin-blue sidebar-mini">
<!-- 加载动画 -->
<div class="page-loading">
    <div class="ball-loader">
        <span></span><span></span><span></span><span></span>
    </div>
</div>
<div class="layui-form" lay-filter="edit-form" action="" style="padding: 20px;">
    <div class="layui-form-item p_menu p_lev1">
        <label class="layui-form-label required_after">平台</label>
        <div class="layui-input-inline">
            <select name="platform_id"  lay-filter="platform_id" id="platform_id" lay-search="" lay-verify="required">
                <!-- <option value="">全部</option> -->
            </select>
        </div>
    </div>
    <div class="layui-form-item" pane="">
        <label class="layui-form-label required_after">用户ID</label>
        <div class="layui-input-inline" id="uid_model">
            <input type="text" name="uid" autocomplete="off" class="layui-input" value="566059913" lay-verify="required">
            <div id="uid_model_user_check"></div>
        </div>
        
    </div>

    <div class="layui-form-item" pane="">
        <label class="layui-form-label">出生月日</label>
        <div class="layui-input-inline">
            <input type="text" name="birthday" id="birthday"  autocomplete="off" class="layui-input" value=>
        </div>
    </div>
    
    <div class="layui-form-item" pane="">
        <label class="layui-form-label">手机号码</label>
        <div class="layui-input-inline">
            <input type="text" name="phone_num"  autocomplete="off" class="layui-input" value="">
        </div>
    </div>
    <div class="layui-form-item" pane="">
        <label class="layui-form-label required_after">QQ号码</label>
        <div class="layui-input-inline">
            <input type="text" name="qq"  autocomplete="off" class="layui-input" value="" lay-verify="required">
        </div>
    </div>
    <div class="layui-form-item" pane="">
        <label class="layui-form-label">qq验证问题答案</label>
        <div class="layui-input-inline">
            <input type="text" name="qq_question_answer"  autocomplete="off" class="layui-input" value="">
        </div>
    </div>
    <div class="layui-form-item" pane="">
        <label class="layui-form-label">微信</label>
        <div class="layui-input-inline">
            <input type="text" name="wechat"  autocomplete="off" class="layui-input" value="">
        </div>
    </div>
    <div class="layui-form-item" pane="">
        <label class="layui-form-label">备注</label>
        <div class="layui-input-inline">
            <textarea placeholder="请输入内容" name="remarks" class="layui-textarea" ></textarea>
        </div>
    </div>
    <div class="layui-form-item" id="status_model">
        <label class="layui-form-label">处理状态</label>
        <div class="layui-input-inline">
            <select name="status"  lay-filter="status" id="status" lay-search="">
            </select>
        </div>
    </div>

    <input type="hidden" name="id" value="0">

    <div class="layui-form-item">
        <div class="layui-input-block">
          <button type="submit" class="layui-btn layui-power" id="Vip-userInputInfoEdit" lay-submit="" lay-filter="submit_btn">修改</button>
        </div>
    </div>
    <div class="layui-form-item">
        <div class="layui-input-block">
          <button type="submit" class="layui-btn layui-power" id="Vip-userInputInfoAdd" lay-submit="" lay-filter="submit_btn">立即提交</button>
        </div>
    </div>
</div>

<script>

    var submit_status = 1;
    var layui_obj = layui.config({
        version: true,
        base: '/assets/model/'
    }).extend({
        common: 'common/js/common',
        search: 'common/js/search',
    }).use(['common','jquery','form','laydate'], function(){
        var laydate = layui.laydate;
        var form = layui.form;
        var $ = layui.jquery;
        var common = layui.common;
        var id = common.urlParam.id?common.urlParam.id:0;
        var p_url = 'vip/userInputInfoAdd';

        laydate.render({
            elem: '#birthday',
            trigger : 'click',
            // type: 'datetime'
        });

        if(id > 0){
            p_url = 'vip/userInputInfoEdit';
            //初始化权限显示
            common.initPowerShow(['Vip-userInputInfoEdit']);

            $('select[name=platform_id]').attr('disabled',true);
            $('input[name=uid]').attr('disabled',true);
        }else{
            //初始化权限显示
            common.initPowerShow(['Vip-userInputInfoAdd']);

            $('#status_model').hide();
        }

        initData();
        //监听提交
        form.on('submit(submit_btn)', function(data){
            if(!submit_status){
                layer.tips('用户数据不符合', '#uid_model_user_check', {
                  tips: 1
                });
                return false;
            }
            common.req({
                url: p_url,
                data: data.field,
                type: "post",
                dataType:"json",
                success:function(data){
                    console.log(data);
                    if( data.code==0 ){
                        var index = parent.layer.getFrameIndex(window.name);
                        window.parent.res_msg(data.msg);
                        parent.layer.close(index);//关闭当前页
                        //window.parent.location.reload(); //刷新父窗口
                    }
                },
                error:function(data){
                    layer.alert('错误'+data.msg,{icon:2});
                }
            });
            return false;
        });

        form.on('select(platform_id)', function(data){
            checkUserData();
        });

        

        function initData(){

            common.req({
                url: 'vip/userInputInfoDetail',
                data: {'id':id},
                type: "post",
                dataType:"json",
                success:function(res){
                    
                    if( res.code==0 ){

                        common.isLoading(false);
                        var base_config = res.config;
                        common.setOption1(base_config.status_arr,$('select[name="status"]'));

                        $.each(base_config.platform_list,function(k,v){
                            $('select[name=platform_id]').append('<option value="'+v.platform_id+'">'+v.name+'</option>');
                        });
                        if(id>0){

                            form.val('edit-form',res.data);
                        }

                        form.render();

                    }else{
                        layer.alert('错误'+res.msg,{icon:2});
                    }
                },
                error:function(res){
                    layer.alert('错误'+res.msg,{icon:2});
                }
            });
        }

        function checkUserData(){
            if(id>0){
                return false;
            }

            var form_data = form.val('edit-form');

            if(form_data.platform_id < 1 || form_data.uid < 1){
                return false;
            }
            var index = layer.load(1);
            common.req({
                url: 'vip/userInputInfoCheckUser',
                data: {
                    'platform_id':form_data.platform_id
                    ,'uid':form_data.uid
                },
                type: "post",
                dataType:"json",
                success:function(res){
                    var str = '';
                    layer.close(index);
                    if( res.code==0 ){
                        submit_status = 1;
                        str += '<p>uid：'+res.data.uid+'</p>';
                        str += '<p>账号：'+res.data.user_name+'</p>';
                        str += '<p>最近游戏：'+res.data.server_name+'</p>';
                        str += '<p>角色：'+res.data.role_name+'</p>';
                        str += '<p>角色Id：'+res.data.role_id+'</p>';
                    }else{
                        submit_status = 0;
                        str += '<p style="color:#f00;">'+res.msg+'</p>';
                    }
                    $('#uid_model_user_check').html(str);
                },
                error:function(res){
                    layer.alert('错误'+res.msg,{icon:2});
                }
            });
        }

        $('input[name=uid]').change(function(e){
            checkUserData();
        })
       
    });
</script>
</body>
</html>