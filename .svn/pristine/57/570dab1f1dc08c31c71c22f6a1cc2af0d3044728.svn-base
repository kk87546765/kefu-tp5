
<!DOCTYPE html>
<html lang="en" class="bg-white">
<head>
    <meta charset="utf-8"/>
    <meta name="renderer" content="webkit">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <meta name="apple-mobile-web-app-status-bar-style" content="black">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="format-detection" content="telephone=no">
    <title>后台管理系统</title>
    <link rel="stylesheet" href="/assets/vendor/layui/css/layui.css"/>
    <link rel="stylesheet" href="/assets/model/common/css/style.css"/>
    <!--[if lt IE 9]>
    <script src="/assets/model/common/js/html5shiv.min.js"></script>
    <script src="/assets/model/common/js/respond.min.js"></script>
    <![endif]-->
    <style>
        body {
            overflow-x: hidden;
        }

        .layui-card-body {
            padding: 0;
        }

        .theme-div {
            padding-left: 25px;
            padding-top: 20px;
            margin-bottom: 10px;
        }

        /** 设置表单样式 */
        .set-item-label {
            display: inline-block;
            height: 38px;
            line-height: 38px;
            padding-left: 20px;
            color: #333333;
        }

        .set-item-ctrl {
            display: inline-block;
            height: 38px;
            line-height: 38px;
        }

        .set-item-ctrl > * {
            margin: 0;
        }


        .layadmin-setTheme-color {
            width: 330px;
            font-size: 0
        }

        .layadmin-setTheme-color li {
            position: relative;
            display: inline-block;
            vertical-align: top;
            width: 80px;
            height: 50px;
            margin: 0 20px 20px 0;
            background-color: #f2f2f2;
            cursor: pointer;
            font-size: 12px;
            color: #666;
            border-bottom: 2px solid #f2f2f2;
        }

        .layadmin-setTheme-color li:after {
            content: '';
            position: absolute;
            z-index: 20;
            top: 50%;
            left: 50%;
            width: 1px;
            height: 0;
            border: 1px solid #f2f2f2;
            transition: all .3s;
            -webkit-transition: all .3s;
            opacity: 0
        }

        .layadmin-setTheme-color li.layui-this:after,.layadmin-setTheme-color li:hover:after {
            width: 100%;
            height: 100%;
            padding: 4px;
            top: -5px;
            left: -5px;
            border-color: #5FB878;
            opacity: 1
        }

        .layadmin-setTheme-header {
            position: relative;
            z-index: 10;
            height: 10px;
            border-top: 1px solid #f2f2f2;
            border-right: 1px solid #f2f2f2
        }

        .layadmin-setTheme-side {
            position: absolute;
            left: 0;
            top: 1px;
            width: 20px;
            height: 100%;
            z-index: 11;
        }

        .layadmin-setTheme-logo {
            position: absolute;
            left: 0;
            top: 0;
            width: 100%;
            height: 10px;
            z-index: 9;
        }
        .huise{
            border-left:1px solid #f2f2f2;
        }
    </style>
</head>
<body>

<!-- 加载动画 -->
<div class="page-loading">
    <div class="ball-loader">
        <span></span><span></span><span></span><span></span>
    </div>
</div>

<div class="layui-card-header">设置主题</div>
<div class="layui-card-body">
    <!-- 主题列表 -->
    <div class="theme-div">
        <ul class="layadmin-setTheme-color">
            <li title="黑白主题" theme="theme-admin">
                <div class="layadmin-setTheme-header" style="background-color: #fff;"></div>
                <div class="layadmin-setTheme-side" style="background-color: #20222A;">
                    <div class="layadmin-setTheme-logo" style="background-color: undefined;"></div>
                </div>
            </li>
            <li title="黑色主题" theme="theme-black">
                <div class="layadmin-setTheme-header" style="background-color: #20222A;"></div>
                <div class="layadmin-setTheme-side" style="background-color: #20222A;">
                    <div class="layadmin-setTheme-logo" style="background-color: undefined;"></div>
                </div>
            </li>
            <li title="蓝色主题" theme="theme-blue"> 
                <div class="layadmin-setTheme-header" style="background-color: #3C8DBC;"></div> 
                <div class="layadmin-setTheme-side" style="background-color: #20222A;"> 
                    <div class="layadmin-setTheme-logo" style="background-color: #3C8DBC;"></div> 
                </div> 
            </li>
            <li title="藏青主题" theme="theme-cyan">
                <div class="layadmin-setTheme-header" style="background-color: #fff;"></div> 
                <div class="layadmin-setTheme-side" style="background-color: #20222A;"> 
                    <div class="layadmin-setTheme-logo" style="background-color: undefined;"></div> 
                </div>
            </li> 
            <li title="黄色主题" theme="theme-yellow"> 
                <div class="layadmin-setTheme-header" style="background-color: #F78400;"></div> 
                <div class="layadmin-setTheme-side" style="background-color: #20222A;"> 
                    <div class="layadmin-setTheme-logo" style="background-color: #F78400;"></div> 
                </div> 
            </li>  
            <li title="绿色主题" theme="theme-green"> 
                <div class="layadmin-setTheme-header" style="background-color: #00A65A;"></div> 
                <div class="layadmin-setTheme-side" style="background-color: #20222A;"> 
                    <div class="layadmin-setTheme-logo" style="background-color: #00A65A;"></div> 
                </div> 
            </li>  
            <li title="粉红主题" theme="theme-pink"> 
                <div class="layadmin-setTheme-header" style="background-color: #fff;"></div> 
                <div class="layadmin-setTheme-side" style="background-color: #FB7299;"> 
                    <div class="layadmin-setTheme-logo" style="background-color: undefined;"></div> 
                </div> 
            </li>  
            <li class="huise" title="紫白主题" theme="theme-purple-white"> 
                <div class="layadmin-setTheme-header" style="background-color: #722ED1;"></div> 
                <div class="layadmin-setTheme-side" style="background-color: #fff;"> 
                    <div class="layadmin-setTheme-logo" style="background-color: #722ED1;"></div> 
                </div> 
            </li>  
            <li title="紫色主题" theme="theme-purple"> 
                <div class="layadmin-setTheme-header" style="background-color: #722ED1;"></div> 
                <div class="layadmin-setTheme-side" style="background-color: #20222A;"> 
                    <div class="layadmin-setTheme-logo" style="background-color: #722ED1;"></div> 
                </div> 
            </li>  
            <li title="白色主题" theme="theme-white"> 
                <div class="layadmin-setTheme-header" style="background-color: #fff;"></div> 
                <div class="layadmin-setTheme-side huise" style="background-color: #fff;"> 
                    <div class="layadmin-setTheme-logo" style="background-color: #fff;"></div> 
                </div> 
            </li>  
            <li class="huise" title="红白主题" theme="theme-red-white"> 
                <div class="layadmin-setTheme-header" style="background-color: #DD4B39;"></div> 
                <div class="layadmin-setTheme-side" style="background-color: #fff;"> 
                    <div class="layadmin-setTheme-logo" style="background-color: #DD4B39;"></div> 
                </div> 
            </li>  
            <li title="红色主题" theme="theme-red"> 
                <div class="layadmin-setTheme-header" style="background-color: #DD4B39;"></div> 
                <div class="layadmin-setTheme-side" style="background-color: #20222A;"> 
                    <div class="layadmin-setTheme-logo" style="background-color: #DD4B39;"></div> 
                </div> 
            </li>
        </ul>
    </div>
    
    <!-- 控制开关 -->
    <div class="layui-form" lay-filter="layui-form" style="margin: 10px 0;">
        <div class="layui-form-item">
            <label class="set-item-label">多标签：</label>
            <div class="set-item-ctrl">
                <input name="setMoreTab" lay-filter="setMoreTab" type="checkbox" lay-skin="switch" lay-text="开启|关闭">
            </div>
            <!--
            <label class="set-item-label">切换刷新：</label>
            <div class="set-item-ctrl">
                <input id="setRefresh" lay-filter="setRefresh" type="checkbox" lay-skin="switch" lay-text="开启|关闭">
            </div>
            -->
        </div>
    </div>

</div>
<script type="text/javascript" src="/assets/vendor/layui/layui.js"></script>
<script>
    layui.config({
        version: true,
        base: '/assets/model/'
    }).extend({
        common: 'common/js/common',
    }).use(['layer', 'form', 'common'], function () {
        var $ = layui.jquery;
        var layer = layui.layer;
        var form = layui.form;
        var common = layui.common;
        common.isLoading(false);
        // 切换主题
        var mTheme = layui.data(common.cacheName).theme;
        $('.layadmin-setTheme-color > li[theme=' + (mTheme ? mTheme : common.defaultTheme) + ']').addClass('layui-this');
        $('.layadmin-setTheme-color > li').click(function () {
            $('.layadmin-setTheme-color > li').removeClass('layui-this');
            $(this).addClass('layui-this');
            common.changeTheme($(this).attr('theme'));
        });
        var openTab = layui.data(common.cacheName).openTab;
        var tabAutoRefresh = layui.data(common.cacheName).tabAutoRefresh;
        form.val('layui-form',{'setMoreTab':openTab == undefined ? common.pageTabs : openTab });
        
        // 关闭/开启多标签
        form.on('switch(setMoreTab)', function (data) {
            var checked = data.elem.checked;
            layui.data(common.cacheName, {key: 'openTab', value: checked});
            common.putTempData('indexTabs', undefined);  // 清除缓存的Tab
            top.location.reload();
        });
    });
</script>
</body>
</html>