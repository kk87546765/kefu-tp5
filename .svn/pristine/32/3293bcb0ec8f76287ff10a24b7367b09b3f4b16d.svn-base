<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8"/>
    <meta name="renderer" content="webkit">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <meta name="apple-mobile-web-app-status-bar-style" content="black">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="format-detection" content="telephone=no">
    <title>后台管理系统</title>
    <link rel="stylesheet" href="/assets/vendor/layui/css/layui.css"/>
    <link rel="stylesheet" href="/assets/model/common/css/style.css"/>
    <link rel="stylesheet" href="/assets/model/common/css/common.css"/>
    <!--[if lt IE 9]>
    <script src="/assets/model/common/js/html5shiv.min.js"></script>
    <script src="/assets/model/common/js/respond.min.js"></script>
    <![endif]-->
    <style>
        .layui-col-space15 {
            /* margin: -7.5px; */
            margin:-7.5px 0 !important;
        }
    </style>
</head>
<body>
<div style="padding: 12px;"  class="search_wrap">
    <form class="layui-form" action="" id="search_form">

<!--        <div class="layui-inline" style="margin-bottom: 6px;">-->
<!--            <label class="layui-form-label">值: </label>-->
<!--            <div class="layui-input-inline">-->
<!--                <input type="text" name="check_value" id="check_value" autocomplete="off" class="layui-input" >-->
<!--            </div>-->
<!--        </div>-->

    </form>
</div>
<div class="layui-btn-group demoTable" style="padding: 0 15px;">
    <button class="layui-btn layui-btn-sm" data-type="back">返回</button>
    <button class="layui-btn layui-btn-sm" data-type="search">搜索</button>
    <button type="button" id="refresh" class="layui-btn  layui-btn-sm">
        <i class="layui-icon layui-icon-refresh"></i>
    </button>
    <button class="layui-btn layui-btn-sm" data-type="ban_many">批量封禁</button>
    <button type="button" class="layui-btn layui-btn-sm layui-btn-danger" data-type="unban_many"><i class="layui-icon"></i> 批量解禁</button>
</div>
<div class="table_wrap" style="padding: 0 15px;">
    <table class="layui-table" lay-filter="demo" id="table-list" >

    </table>
</div>


<script type="text/javascript" src="/assets/vendor/layui/layui.js"></script>
<script>
    layui.config({
        version: true,
        base: '/assets/model/'
    }).extend({
        common: 'common/js/common',
    }).use(['form', 'table','layedit', 'laydate','common','jquery'], function(){
        var table   = layui.table
            ,form = layui.form
            ,layer = layui.layer
            ,layedit = layui.layedit
            ,common = layui.common
            ,$ = layui.jquery
            ,element = layui.element
            ,laydate = layui.laydate;

        var pdata = common.urlParam;
        console.log(pdata)
        // 表格请求初始化
        var cols = [[
            { type:'checkbox', minWidth:40, fixed: 'left'}
            ,{'title':'用户ID','field':'uid'}
            ,{'field':'user_name','title':'用户账号',}
            ,{'field':'role_name','title':'角色名',}
            ,{'field':'server_name','title':'区服'}
            ,{'field':'money','title':'充值金额'}
            ,{'field':'reg_date','title':'注册时间'}
            ,{'field':'login_date','title':'最后登录时间'}
            ,{'field':'status','title':'状态'}
            ,{'title':'操作',templet: function(d){
                    if(d.status == '正常'){
                        var div = ' <a class=\'layui-btn layui-btn-danger layui-btn-xs\' lay-event=\'ban\'>封禁账号</a>'
                        return div
                    }else if(d.status == '已封禁'){
                        var div = ' <a class=\'layui-btn layui-btn-danger layui-btn-xs\' lay-event=\'unban\'>解封账号</a>'
                        return div

                    }
                }
            }
        ]];

        table.render({
            elem: '#table-list'
            ,height: 'full-120'
            ,headers:common.getHeader()
            ,url: common.apiUrl+'waring/check_user' //数据接口
            ,page: false //开启分页
            ,limits:[20,50,100,200,500]
            ,limit:20
            ,minWidth:1000
            ,cols: cols
            ,method:'post'
            ,where:pdata
            ,done:function(a,b,c){

//隐藏加载框
                common.isLoading(false);

            }
        });





        var nav= 0
        element.on('tab(demo)', function(elem){
            nav = elem.index
        });



        //监听工具条
        table.on('tool(demo)', function(obj){

            var data = obj.data;
            if(obj.event === 'ban'){
                layer.confirm('确定进行封禁吗', function(index){
                    layer.close(index);

                    $.ajax({
                        url: "ban/ban_user",
                        data: { ban_list: data.user_name,ban_time:0,ban_type:1,reason:"预警封禁" },
                        type: "post",
                        dataType:"json",
                        success:function(res){
                            if( res.status==1 ){
                                // obj.del();
                                layer.msg(res.msg,{icon:1});
                                table.reload('idTest');
                            }else{
                                layer.msg(res.msg,{icon:2});
                            }
                        },
                        error:function(data){
                            layer.alert('错误'+data.msg,{icon:2});
                        }
                    });

                })

            }if(obj.event === 'unban'){
                layer.confirm('确定进行解封吗', function(index){
                    layer.close(index);

                    common.req({
                        url: "ban/ban_user",
                        data: { ban_list: data.user_name,ban_time:0,ban_type:5,reason:"预警封禁" },
                        type: "post",
                        dataType:"json",
                        success:function(res){
                            if( res.status==1 ){
                                // obj.del();
                                layer.msg(res.msg,{icon:1});
                                table.reload('idTest');
                            }else{
                                layer.msg(res.msg,{icon:2});
                            }
                        },
                        error:function(data){
                            layer.alert('错误'+data.msg,{icon:2});
                        }
                    });

                })

            }
        });

        $('.demoTable .layui-btn').on('click', function(){

            var type = $(this).data('type');
            if( type=='search' ){

                //搜索
                let form_data = $('#search_form').serializeArray();
                $.each(form_data,function(k,v){
                    where[v.name] = v.value;
                })
                table.reload('idTest', {
                    method: 'get'
                    ,where: where

                    ,page: {
                        curr: 1
                    }
                });
            }else if( type=='ban_many' ){
                var checkStatus = table.checkStatus('idTest')
                    ,data = checkStatus.data;

                if( data.length<=0 ){
                    layer.msg("未选择任何行！",{icon:2});
                    return;
                }
                // var user_names = [];
                var user_names = '';
                for( var i=0; i<data.length; i++ ){
                    user_names += data[i]['user_name']+"\n";
                }


                layer.confirm('确定进行封禁吗？', function(index){
                    layer.close(index);
                    $.ajax({
                        url: "/ban/ban_user",
                        data: { ban_list: user_names,ban_time:0,ban_type:1,reason:"预警封禁" },
                        type: "post",
                        dataType:"json",
                        success:function(res){
                            if( res.status==1 ){
                                // obj.del();
                                layer.msg(res.msg,{icon:1});
                                table.reload('idTest');
                            }else{
                                layer.msg(res.msg,{icon:2});
                            }
                        },
                        error:function(data){
                            layer.alert('错误'+data.msg,{icon:2});
                        }
                    });
                });
            }else if(type=='unban_many'){
                var checkStatus = table.checkStatus('idTest')
                    ,data = checkStatus.data;

                if( data.length<=0 ){
                    layer.msg("未选择任何行！",{icon:2});
                    return;
                }
                // var user_names = [];
                var user_names = '';
                for( var i=0; i<data.length; i++ ){
                    user_names += data[i]['user_name']+"\n";
                }


                //批量删除
                layer.confirm('确定进行解封吗？', function(index){
                    layer.close(index);
                    $.ajax({
                        url: "ban/ban_user",
                        data: { ban_list: user_names,ban_time:0,ban_type:5,reason:"预警解封" },
                        type: "post",
                        dataType:"json",
                        success:function(res){
                            if( res.status==1 ){
                                // obj.del();
                                layer.msg(res.msg,{icon:1});
                                table.reload('idTest');
                            }else{
                                layer.msg(res.msg,{icon:2});
                            }
                        },
                        error:function(data){
                            layer.alert('错误'+data.msg,{icon:2});
                        }
                    });
                });
            }else if('back'){
                window.location.href = "/admin/waring/index_n";
            }
        });
    });
    //给子级调用
    function res_msg(msg){
        layer.msg(msg,{icon:1});
        setTimeout(function(){
            window.location.reload();
        },1000);
    }
</script>
</body>
</html>