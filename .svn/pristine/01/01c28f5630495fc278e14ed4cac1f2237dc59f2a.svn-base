<html>
<head>
    <meta charset="utf-8"/>
    <meta name="renderer" content="webkit">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <meta name="apple-mobile-web-app-status-bar-style" content="black">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="format-detection" content="telephone=no">
    <title>后台管理系统</title>
    <link rel="stylesheet" href="/assets/vendor/layui/css/layui.css"/>
    <link rel="stylesheet" href="/assets/model/common/css/style.css"/>
    <link rel="stylesheet" href="/assets/model/common/css/common.css"/>
    <script type="text/javascript" src="/assets/vendor/layui/layui.js"></script>
    <!--[if lt IE 9]>
    <script src="/assets/model/common/js/html5shiv.min.js"></script>
    <script src="/assets/model/common/js/respond.min.js"></script>
    <![endif]-->
</head>
<style>
    .laytable-cell-checkbox .layui-disabled.layui-form-checked i {
        background: #fff !important;
    }
    .statistic{
        padding-left: 20px;
        padding-top: 15px;
    }
    .statistic li{
        display: inline-block;
        margin-right: 10px;
    }
</style>

<body>
<div style="padding: 12px;"  class="search_wrap">
    <form class="layui-form" lay-filter="edit-form" action="" id="search_form">

        <div class="layui-inline">
            <label class="layui-form-label">日期</label>
            <div class="layui-input-inline">
                <input type="text" name="month"  value="" id="month" autocomplete="off" class="layui-input">
            </div>
        </div>

        <div class="layui-inline" style="margin-bottom: 6px;">
            <label class="layui-form-label">主体: </label>
            <div class="layui-input-inline">
                <div id="select_platform_id" class="xm-select-demo" style="min-width: 210px"></div>
            </div>
        </div>

        <div class="layui-inline" style="margin-bottom: 6px;">
            <label class="layui-form-label">产品: </label>
            <div class="layui-input-inline">
                <div id="select_product_id" class="xm-select-demo" style="min-width: 210px"></div>
            </div>
        </div>

        <div class="layui-inline" style="margin-bottom: 6px;">
            <label class="layui-form-label">专员: </label>
            <div class="layui-input-inline">
                <div id="select_admin_id" class="xm-select-demo" style="min-width: 210px"></div>
            </div>
        </div>
    </form>
</div>
<div class="search-float-right">
    <div class="layui-btn-group demoTable" >
        <button class="layui-btn layui-btn-sm" data-type="search">搜索</button>
        <button type="button" id="refresh" class="layui-btn  layui-btn-sm">
            <i class="layui-icon layui-icon-refresh"></i>
        </button>
        <!-- <button type="button" class="layui-btn layui-btn-sm layui-btn-warm" data-type="excel">
            <i class="layui-icon"></i>导出Excel
        </button> -->
    <!--    <button class="layui-btn layui-btn-sm" data-type="add">添加</button>-->
        <!-- <button type="button" class="layui-btn layui-btn-sm layui-btn-danger" data-type="del"><i class="layui-icon"></i> 批量删除</button> -->
    </div>
</div>
<div>
    <ul class="statistic" id="count_res">
    </ul>
</div>
<div class="table_wrap" style="padding: 0 15px;">
    <table id="idTest" lay-filter="demo" class="layui-table"></table>
</div>



<script>
    var lay_page = 1;
    var p_data = {};

    var layui_obj = layui.config({
        //version: true,
        base: '/assets/model/'
    }).extend({
        common: 'common/js/common',
        search: 'common/js/search',
    }).use(['common','jquery','search','table','form','laydate','xmSelect'], function(){
        var table   = layui.table;
        var form = layui.form;
        var laydate = layui.laydate;
        var xmSelect = layui.xmSelect;

        var $ = layui.jquery;
        var common = layui.common;
        var search = layui.search;

         //日期
        laydate.render({
            elem: '#month',
            trigger : 'click',
            type: 'month'
        });

        initData();

        $('.demoTable .layui-btn').on('click', function(){
            var type = $(this).data('type');
            if( type=='search' ){
                //搜索
                let form_data = $('#search_form').serializeArray();
                let search_statistic_flag = 0;
                // console.log(form_data);return;
                $.each(form_data,function(k,v){

                    if(p_data[v.name] != v.value){
                        search_statistic_flag++;
                    }
                    p_data[v.name] = v.value;
                })

                table.reload('idTest', {
                    method: 'post'
                    ,where: p_data
                });
            }else if( type=='excel' ){
                loading = layer.load(1, {shade: [0.3, '#fff']});
                var excel = layui.excel;
                console.log(excel)
                //搜索
                let form_data = $('#search_form').serializeArray();
                // console.log(form_data);return;
                var this_where = {
                    is_excel:1
                    ,limit:0
                };
                $.each(form_data,function(k,v){
                    this_where[v.name] = v.value;
                })
                $.ajax({
                    url: '/admin/{{controller}}/sell_work_order_list',
                    dataType: 'json',
                    type: "post",
                    data: this_where,
                    success: function(res) {
                        layer.close(loading);
                        layer.msg(res.msg);
                        // 假如返回的 res.data 是需要导出的列表数据
                        console.log(res.data);//
                        // 1. 数组头部新增表头
                        if (res.code == 0) {

                            res.data.unshift({
                                id:'ID'
                                ,type_str:'工单类型'
                                ,sell_type_str:'销售类型'
                                ,kf_id_str:'VIP专员'
                                ,user_name:'玩家账号'
                                ,server_id:'区服'
                                ,product_id_str:'游戏'
                                ,status_str:'审核状态'
                                ,sell_amount:'订单金额'
                                ,pay_time_str:'成交时间'
                                ,day_str:'录单时间'
                                ,qc_first_time_str:'初审时间'
                                ,qc_second_time_str:'复审时间'
                                ,reason:'拒审原因'
                                ,chum_reason:'流失原因'
                            });
                            // 3. 执行导出函数，系统会弹出弹框
                            excel.exportExcel({
                                sheet1: res.data
                            }, '工单列表.xlsx', 'xlsx');
                        }
                    },
                    error:function(res){
                        layer.close(loading);
                        layer.msg(res.msg);
                    }
                });
            }
        });

        function initData(){

            common.req({
                url: 'vip_statistic/kfMonthProductStatisticListConfig' //获取游戏名称
                ,success:function(json)
                {
                    var base_config = json.data;
                    var form_data = base_config.form_data;

                    search.init('common_search',base_config.search_config);

                    p_data = common.merge(p_data,form_data);
                    // 数据表格
                    table.render({
                        elem: '#idTest'
                        ,height: 'full-120'
                        ,url: common.getUrl('vip_statistic/kfMonthProductStatisticList') //数据接口
                        ,headers:common.getHeader()
                        ,page: true
                        ,limits:[20,50,100,200,500]
                        ,limit:20
                        ,minWidth:1000
                        ,autoWidth:true
                        ,method:'POST'
                        ,where:p_data
                        ,cols: [[ //表头
                            {field:'day_str', minWidth:110, title:'日期'}
                            ,{field:'p_p_str', minWidth:90, title:'游戏'}
                            ,{field:'add_user_count_all', minWidth:88, title:'总分配'}
                            ,{field:'maintain_user_all', minWidth:104, title:'总联系用户'}
                            ,{field:'maintain_user_all_present', minWidth:116, title:'总联系用户率'}
                            ,{field:'add_user_count_month', minWidth:88, title:'月分配'}
                            ,{field:'maintain_user_count_month', minWidth:88, title:'月联系'}
                            ,{field:'maintain_user_count_month_present', minWidth:88, title:'月联系率'}
                            ,{field:'washed_away_all', minWidth:116, title:'总流失(充值)'}
                            ,{field:'washed_away_all_present', minWidth:116, title:'流失率(充值)'}
                            ,{field:'login_lost_all', minWidth:116, title:'总流失(登录)'}
                            ,{field:'login_lost_all_present', minWidth:116, title:'流失率(登录)'}
                            ,{field:'add_washed_away_month', minWidth:116, title:'月流失(充值)'}
                            ,{field:'add_washed_away_month_present', minWidth:127, title:'月流失率(充值)'}
                            ,{field:'add_login_lost_month', minWidth:116, title:'月流失(登录)'}
                            ,{field:'add_login_lost_month_present', minWidth:127, title:'月流失率(登录)'}
                        ]]
                        ,done:function(a,b,c){
                            lay_page = b;
                            var this_arr = {
                                'add_user_count_all':'总分配',
                                'maintain_user_all':'总联系',
                                'maintain_user_all_present':'总联系率',
                                'add_user_count_month':'月分配',
                                'maintain_user_count_month':'月联系',
                                'maintain_user_count_month_present':'月联系率',
                                'washed_away_all':'总充值流失',
                                'washed_away_all_present':'总充值流失率',
                                'login_lost_all':'总登录流失',
                                'login_lost_all_present':'总登录流失率',
                                'add_washed_away_month':'月充值流失',
                                'add_washed_away_month_present':'月充值流失率',
                                'add_login_lost_month':'月登录流失',
                                'add_login_lost_month_present':'月登录流失率',
                            };

                            var count_res = a.count_res;
                            var html = '';
                            $.each(this_arr,(k,v)=>{
                                html+= '<li >'+v+'：<span>'+count_res[k]+'</span></li>';
                            })
                            
                            $('#count_res').html(html);
                        }
                    });
                    form.render();
                    form.val('edit-form',form_data);
                }
            });
        }

        function statistic(){
            
            $.ajax({
                url: "/admin/{{controller}}/getVipKfDayStatistic",
                data: p_data,
                type: "post",
                dataType:"json",
                success:function(res){
                    if( res.code==0 ){
                        var count_res = res.data;
                        $('#add_user_count span').html(count_res.add_user_count);
                        $('#add_user_maintenance_str span').html(count_res.add_user_maintenance_str);
                        $('#add_user_amount_month span').html(count_res.add_user_amount_month);
                    }
                },
                error:function(data){
                    layer.alert('错误'+data.msg,{icon:2});
                }
            });
        }
        
    });

</script>
</body>
</html>