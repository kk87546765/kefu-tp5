{% include 'common/header_layui.volt' %}
<body>
<div style="padding: 12px;"  class="search_wrap">
    <form class="layui-form" action="">
        <div class="layui-inline" style="margin-bottom: 6px;">
            <label class="layui-form-label">IP关键词: </label>
            <div class="layui-input-inline">
                <input type="text" name="ip_key" id="keyword" autocomplete="off" class="layui-input" >
            </div>
        </div>
    </form>
</div>
<div class="layui-btn-group demoTable" style="padding: 0 15px;">
    <button class="layui-btn layui-btn-sm" data-type="search">搜索</button>
    <button type="button" id="refresh" class="layui-btn  layui-btn-sm">
        <i class="layui-icon layui-icon-refresh"></i>
    </button>
    <button class="layui-btn layui-btn-sm" data-type="add">添加</button>
    <button type="button" class="layui-btn layui-btn-sm layui-btn-danger" data-type="del"><i class="layui-icon"></i> 批量删除</button>
</div>
<div class="table_wrap" style="padding: 0 15px;">
    <table class="layui-table" lay-data="{ url:'/admin/keyword/ipKeyword', page:true, limits:[20,50,100,200,500], limit:20, id:'idTest',minWidth: 1000, height: 'full-120' }" lay-filter="demo" >
        <thead>
        <tr>
            <th lay-data="{ type:'checkbox', minWidth:40, fixed: 'left' }"></th>
            <th lay-data="{field:'id', width:80, sort: true, }">ID</th>
            <th lay-data="{field:'ip_key', minWidth:300}">IP关键词</th>
            <th lay-data="{field:'addtime', minWidth:100}">添加时间</th>
            <th lay-data="{field:'add_user', minWidth:100}">添加人</th>
            <th lay-data="{minWidth:180, align:'center', toolbar: '#barDemo'}">操作</th>
        </tr>
        </thead>
    </table>
</div>

<script type="text/html" id="barDemo">
    <a class="layui-btn layui-btn-danger layui-btn-xs" lay-event="del">删除</a>
</script>

<script>
    layui.use(['table','laydate'], function(){
        var table   = layui.table,
            laydate = layui.laydate;

        //监听工具条
        table.on('tool(demo)', function(obj){
            var data = obj.data;
            if(obj.event === 'del'){
                layer.confirm('真的删除行么', function(index){
                    layer.close(index);
                    $.ajax({
                        url: "/admin/keyword/del_ipkey",
                        data: { ids: data.id },
                        type: "post",
                        dataType:"json",
                        success:function(res){
                            if( res.status==1 ){
                                obj.del();
                                layer.msg(res.msg,{icon:1});
                            }else{
                                layer.msg(res.msg,{icon:2});
                            }
                        },
                        error:function(data){
                            layer.alert('错误'+data.msg,{icon:2});
                        }
                    });

                });
            }
        });

        $('.demoTable .layui-btn').on('click', function(){
            var type = $(this).data('type');
            if( type=='add' ){
                //添加
                layer.open({
                    type: 2,
                    title: "添加关键词",
                    maxmin: true,
                    shadeClose: true, //点击遮罩关闭层
                    area : ['70%' , '70%'],
                    content: "/admin/keyword/add_ipkey"
                });
            }else if( type=='search' ){
                //搜索
                var game     = $('#game').val(),
                    keyword  = $('#keyword').val();
                table.reload('idTest', {
                    method: 'post'
                    ,where: {
                        'game': game,
                        'keyword': keyword
                    }
                    ,page: {
                        curr: 1
                    }
                });
            }else if( type=='del' ){
                var checkStatus = table.checkStatus('idTest')
                    ,data = checkStatus.data;

                if( data.length<=0 ){
                    layer.msg("未选择任何行！",{icon:2});
                    return;
                }
                var ids = [];
                for( var i=0; i<data.length; i++ ){
                    ids.push(data[i]['id']);
                }
                //批量删除
                layer.confirm('真的删除选中行吗？', function(index){
                    layer.close(index);
                    $.ajax({
                        url: "/admin/keyword/del_ipkey",
                        data: { ids: ids },
                        type: "post",
                        dataType:"json",
                        success:function(res){
                            if( res.status==1 ){
                                //删除选中行
                                $('.laytable-cell-checkbox>input:checked').each(function(){
                                    var index = $(this).parents('tr').data('index');
                                    $(".layui-table-body tr[data-index='"+index+"']").remove();
                                });
                                layer.msg(res.msg,{icon:1});
                            }else{
                                layer.msg(res.msg,{icon:2});
                            }
                        },
                        error:function(data){
                            layer.alert('错误'+data.msg,{icon:2});
                        }
                    });
                });
            }
        });
    });
    //给子级调用
    function res_msg(msg){
        layer.msg(msg,{icon:1});
        setTimeout(function(){
            window.location.reload();
        },1000);
    }
</script>
</body>
</html>