<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8"/>
    <meta name="renderer" content="webkit">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <meta name="apple-mobile-web-app-status-bar-style" content="black">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="format-detection" content="telephone=no">
    <title>后台管理系统</title>
    <link rel="stylesheet" href="/assets/vendor/layui/css/layui.css"/>
    <link rel="stylesheet" href="/assets/model/common/css/style.css"/>
    <link rel="stylesheet" href="/assets/model/common/css/common.css"/>
    <!--[if lt IE 9]>
    <script src="/assets/model/common/js/html5shiv.min.js"></script>
    <script src="/assets/model/common/js/respond.min.js"></script>
    <![endif]-->
    <style>
        .layui-col-space15 {
            /* margin: -7.5px; */
            margin:-7.5px 0 !important;
        }
    </style>
</head>
<body class="hold-transition skin-blue sidebar-mini">
<form class="layui-form" action="" style="padding: 20px;" lay-filter="edit-form">
    <div class="layui-form-item">
        <label class="layui-form-label">产品</label>
        <div class="layui-input-inline">
            <input type="text" name="product_name" id="product_name" value="" class="layui-input" readonly="readonly">
            </select>
        </div>
    </div>

    <div class="layui-form-item">
        <label class="layui-form-label">区服</label>
        <div class="layui-input-inline">
            <input type="text"  name="server_name"  value=""  class="layui-input" readonly="readonly">
        </div>
    </div>

    <div class="layui-form-item p_menu p_lev1">
        <label class="layui-form-label">内部角色ID</label>
        <div class="layui-input-inline">
            <input type="text" name="role_id" value="" id='role_id' class="layui-input">
        </div>
    </div>

    <div class="layui-form-item p_menu p_lev1">
        <label class="layui-form-label">内部角色名</label>
        <div class="layui-input-inline">
            <input type="text" name="role_name" value="" id="role_name" class="layui-input">

        </div>
    </div>


    <div class="layui-form-item p_menu p_lev1">
        <label class="layui-form-label">进驻时间</label>
        <div class="layui-input-inline">
            <input type="text" name="start_time" value="" id="start_time" class="layui-input">

        </div>
    </div>

    <div class="layui-form-item">
        <label class="layui-form-label">负责人</label>
        <div class="layui-input-inline">
            <select  name="admin_id" lay-verify="required" lay-search="" id="admin_id">
                <option value="0" >请选择负责人</option>

            </select>
        </div>
    </div>


    <input type="hidden" name="id" value="{{server_info['id']}}">
    <input type="hidden" name="garrison_product_id" value="{{server_info['garrison_product_id']}}" id="garrison_product_id">
    <input type="hidden" name="server_id" value="{{server_info['server_id']}}" id="server_id">
    <div class="layui-form-item">
        <div class="layui-input-block">
            <button type="submit" class="layui-btn" lay-submit="" lay-filter="submit_btn">立即提交</button>
        </div>
    </div>
</form>
<script type="text/javascript" src="/assets/vendor/layui/layui.js"></script>
<script>
    var where = {};
    layui.config({
        version: true,
        base: '/assets/model/'
    }).extend({
        common: 'common/js/common',
        search: 'common/js/search',
    }).use(['form','jquery','laydate','common'], function(){
        var form = layui.form,
            laydate = layui.laydate,
            common = layui.common,
            $ = layui.jquery;

        var pdata = common.urlParam;
        //时间
        laydate.render({
            elem: '#start_time',
            type: 'datetime',
            trigger:'click'
        });



        common.req({
            url: "distributional_server/getOne",
            data: { id: pdata.id },
            type: "post",
            dataType:"json",
            success:function(res){
                if( res.code == 0 ){
                    getAdmin();
                    form.val('edit-form',res.data);

                }
            },
            error:function(data){
                layer.alert('错误'+data.msg,{icon:2});
            }
        });

        function getAdmin(){
            common.req({
                url: "distributional_server/getAdmin",
                data: { id: pdata.id },
                type: "post",
                dataType:"json",
                async:false,
                success:function(res){
                    if( res.code == 0 ){
                        var html = '';
                        $.each(res.data,function(k,v){
                            html ='<option value="'+v.id+'">'+v.name+'</option>';
                            $('#admin_id').append(html)
                        })

                        form.render('select');
                    }
                },
                error:function(data){
                    layer.alert('错误'+data.msg,{icon:2});
                }
            });
        }




        //监听提交
        form.on('submit(submit_btn)', function(data){

            common.req({
                url: "distributional_server/edit",
                data: data.field,
                type: "post",
                dataType:"json",
                success:function(res){
                    console.log(res);
                    if( res.code==0 ){
                        var index = parent.layer.getFrameIndex(window.name);
                        window.parent.res_msg(res.msg);
                        parent.layer.close(index);//关闭当前页
                        //window.parent.location.reload(); //刷新父窗口
                    }
                },
                error:function(res){
                    layer.alert('错误'+res.msg,{icon:2});
                }
            });
            return false;
        });


        form.verify({
            gt0:function(val,item){
                if(val<=0){
                    return '请填写';
                }
            },
            min0:function(value, item){

                if(!(/^[\d]{1,}$/.test(value)) ){
                    return '必须为正数';
                }
            },
        });

    });
</script>
</body>
</html>