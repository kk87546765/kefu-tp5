<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8"/>
    <meta name="renderer" content="webkit">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <meta name="apple-mobile-web-app-status-bar-style" content="black">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="format-detection" content="telephone=no">
    <title>后台管理系统</title>
    <link rel="stylesheet" href="/assets/vendor/layui/css/layui.css"/>
    <link rel="stylesheet" href="/assets/model/common/css/style.css"/>
    <link rel="stylesheet" href="/assets/model/common/css/common.css"/>
    <script type="text/javascript" src="/assets/vendor/layui/layui.js"></script>
    <!--[if lt IE 9]>
    <script src="/assets/model/common/js/html5shiv.min.js"></script>
    <script src="/assets/model/common/js/respond.min.js"></script>
    <![endif]-->
</head>
<style>
    .laytable-cell-checkbox .layui-disabled.layui-form-checked i {
        background: #fff !important;
    }
    .statistic{
        padding-left: 20px;
        padding-top: 15px;
    }
    .statistic li{
        display: inline-block;
        margin-right: 10px;
    }
</style>
<body>
<div style="padding: 12px;" class="search_wrap">
    <form class="layui-form" lay-filter="edit-form" action="" id="search_form">
        <div class="layui-inline">
            <label class="layui-form-label">充值日期</label>

            <div class="layui-input-inline" style="width: 150px;">
                <input type="text" name="start_time" id="sdate" placeholder="开始时间" autocomplete="off" class="layui-input" value=>
            </div>
            -
            <div class="layui-input-inline" style="width: 150px;">
                <input type="text" name="end_time" id="edate"  placeholder="结束时间" autocomplete="off" class="layui-input" value=>
            </div>
        </div>

        <span id="common_search"></span>

        <div class="layui-inline">
            <label class="layui-form-label">订单金额</label>
            <div class="layui-input-inline" style="width: 100px;">
                <input type="text" name="pay_min" id="total_pay_min" autocomplete="off" class="layui-input" value=>
            </div>
            <div class="layui-input-inline" style="width: 100px;">
                <input type="text" name="pay_max" id="total_pay_max" autocomplete="off" class="layui-input" value=>
            </div>
        </div>

        <div class="layui-inline" style="margin-bottom: 6px;">
            <label class="layui-form-label">账号</label>
            <div class="layui-input-inline">
                <input type="text" name="user_name" id="user_name" autocomplete="off" class="layui-input" value=>
            </div>
        </div>
        <div class="layui-inline" style="margin-bottom: 6px;">
            <label class="layui-form-label">用户id</label>
            <div class="layui-input-inline">
                <input type="text" name="uid" id="uid" autocomplete="off" class="layui-input" value=>
            </div>
        </div>
        <div class="layui-inline" style="margin-bottom: 6px;">
            <label class="layui-form-label">角色id</label>
            <div class="layui-input-inline">
                <input type="text" name="role_id" id="role_id" autocomplete="off" class="layui-input" value=>
            </div>
        </div>
        <div class="layui-inline" style="margin-bottom: 6px;">
            <label class="layui-form-label">角色名称</label>
            <div class="layui-input-inline">
                <input type="text" name="role_name" id="role_name" autocomplete="off" class="layui-input" value=>
            </div>
        </div>
        <div class="layui-inline" style="margin-bottom: 6px;">
            <label class="layui-form-label">区服前缀</label>
            <div class="layui-input-inline">
                <input type="text" name="server_prefix" id="server_prefix" autocomplete="off" class="layui-input" value=>
            </div>
        </div>
        <div class="layui-inline">
            <label class="layui-form-label">区服ID</label>
            <div class="layui-input-inline" style="width: 100px;">
                <input type="text" name="server_id_min" id="server_id_min" autocomplete="off" class="layui-input" value=>
            </div>
            <div class="layui-input-inline" style="width: 100px;">
                <input type="text" name="server_id_max" id="server_id_max" autocomplete="off" class="layui-input" value=>
            </div>
        </div>
        <div class="layui-inline" style="margin-bottom: 6px;">
            <label class="layui-form-label">区服后缀</label>
            <div class="layui-input-inline">
                <input type="text" name="server_suffix" id="server_suffix" autocomplete="off" class="layui-input" value=>
            </div>
        </div>
        <div class="layui-inline" style="margin-bottom: 6px;">
            <label class="layui-form-label">是否录单</label>
            <div class="layui-input-inline">
                <select name="is_record"  lay-filter="is_record" id="is_record" lay-search="">
                    <option value=0>全部</option>
                    <option value=1>已录单</option>
                    <option value=2>未录单</option>
                </select>
            </div>
        </div>
        <div class="layui-inline" style="margin-bottom: 6px;">
            <label class="layui-form-label">返利申请状态</label>
            <div class="layui-input-inline">
                <select name="rp_apply_status">
                    <option value="0">全部</option>
                </select>
            </div>
        </div>
        <div class="layui-inline" style="margin-bottom: 6px;">
            <label class="layui-form-label">返利审批状态</label>
            <div class="layui-input-inline">
                <select name="rp_examine_status">
                    <option value="-1">全部</option>
                </select>
            </div>
        </div>
    </form>
</div>
<div class="layui-btn-group demoTable"  style="padding: 0 30px; float: right;">
    <button class="layui-btn layui-btn-sm" data-type="search">搜索</button>
    <button type="button" class="layui-btn layui-btn-sm layui-btn-warm" data-type="excel">
        <i class="layui-icon"></i>导出Excel
    </button>
</div>
<div>
    <ul class="statistic">
        <li id="people_count">人数：<span>0</span></li>
        <li id="sum_pay">充值总额：<span>0</span></li>
    </ul>
</div>
<div class="table_wrap" style="padding: 0 15px;">
    <table id="idTest" lay-filter="demo" class="layui-table"></table>
</div>

<script>
    var lay_page = 1;
    var where = {};

    var layui_obj = layui.config({
        //version: true,
        base: '/assets/model/'
    }).extend({
        common: 'common/js/common',
        search: 'common/js/search',
    }).use(['common','jquery','search','table','laydate','form','excel'], function(){
        var table   = layui.table,
            form = layui.form,
            laydate = layui.laydate;
        var $ = layui.jquery;
        var common = layui.common;
        var search = layui.search;
        //日期
        laydate.render({
            elem: '#sdate',
            trigger : 'click'
        });
        laydate.render({
            elem: '#edate',
            trigger : 'click'
        });

        initData();

        $('.demoTable .layui-btn').on('click', function(){
            var type = $(this).data('type');
            if( type=='search' ){
                //搜索
                let form_data = $('#search_form').serializeArray();
                $.each(form_data,function(k,v){
                    where[v.name] = v.value;
                })
                table.reload('idTest', {
                    method: 'post'
                    ,where: where
                    ,page: {
                        curr: 1
                    }
                });
            }else if( type=='excel' ){
                loading = layer.load(1, {shade: [0.3, '#fff']});
                var excel = layui.excel;
                console.log(excel)
                //搜索
                let form_data = $('#search_form').serializeArray();
                var this_where = {};
                $.each(form_data,function(k,v){
                    this_where[v.name] = v.value;
                })
                this_where['is_excel'] = 1;
                common.req({
                    url: 'vip_statistic/userRechargeListExcel',
                    dataType: 'json',
                    type: "post",
                    data: this_where,
                    success: function(res) {
                        layer.close(loading);
                        layer.msg(res.msg);
                        // 假如返回的 res.data 是需要导出的列表数据

                        // 1. 数组头部新增表头
                        if (res.code == 0) {
                            var excel_field = {
                                date: '日期',
                                product_name: '产品名称',
                                game_name: '子游戏',
                                user_name: '用户名',
                                uid: 'uid',
                                server_id: '区服id',
                                server_name: '区服名称',
                                role_id: '角色ID',
                                role_name: '角色名称',
                                ascription_vip_name: 'VIP专员',
                                sumamount: '充值金额',
                                order_count: '充值次数',
                                last_record_time: '录单时间',
                                apply_status: '申请状态',
                                examine: '审核状态',
                                content: '道具内容',
                                add_admin_name: '申请人'
                             };
                            var excel_field_arr = [];
                            
                            $.each(excel_field,function(k,v){
                                excel_field_arr.push(k);
                            })

                            var data = excel.filterExportData(res.data, excel_field_arr);
                            
                            data.unshift(excel_field);
                            // 3. 执行导出函数，系统会弹出弹框
                            excel.exportExcel({
                                sheet1: data
                            }, res.name+'.xlsx', 'xlsx');
             
                        }
                    },
                    error:function(res){
                        layer.close(loading);
                        layer.msg(res.msg);
                    }
                });
            }
        });

        //监听工具条
        table.on('tool(demo)', function(obj) {
            var data = obj.data;
            if(obj.event === 'rebate'){
                var this_url = "/view/vipwelfare/prop_rebate_detail.html?platform_id="+data.platform_id;
                this_url+="&uid="+data.uid;
                this_url+="&date="+data.date;
                this_url+="&game_id="+data.game_id;
                layer.open({
                    type: 2,
                    title: "添加返利",
                    maxmin: true,
                    shadeClose: true, //点击遮罩关闭层
                    area : ['80%' , '60%'],
                    content: this_url
                });
            } else if (obj.event === 'details'){
                layer.open({
                    type: 2,
                    title: "详情|审核",
                    maxmin: true,
                    shadeClose: true, //点击遮罩关闭层
                    area : ['80%' , '60%'],
                    content: "/view/vipwelfare/prop_rebate_list.html?platform_id="+data.platform_id
                        +"&uid="+data.uid
                        +"&date="+data.date
                        +"&game_id="+data.game_id
                });
            } else if(obj.event === 'userinfo'){
                console.log(data);
                //用户详情
                var url = "sell_work_order_info.html?id="+data.id;

                var this_index = layer.open({
                    type: 2,
                    title: "详情",
                    maxmin: true,
                    shadeClose: true, //点击遮罩关闭层
                    area : ['80%' , '60%'],
                    content: url
                });

                layer.full(this_index);
            }

        });

        function initData(){
            common.initPowerShow(['VipStatistic-userRechargeList','VipStatistic-userRechargeListExcel']);

            common.req({
                url: 'vip_statistic/userRechargeListConfig' //获取游戏名称
                ,success:function(json)
                {

                    var kf_source_data = [];

                    var base_config = json.data;
                    var form_data = base_config.form_data;

                    $.each(base_config.examine_status_arr,function(k,v){
                        $('select[name=rp_examine_status]').append('<option value="'+k+'">'+v+'</option>');
                    });

                    $.each(base_config.apply_status_arr,function(k,v){
                        $('select[name=rp_apply_status]').append('<option value="'+k+'">'+v+'</option>');
                    });

                    search.init('common_search',base_config.search_config);

                    form.val('edit-form',form_data);

                    // 数据表格
                    table.render({
                        elem: '#idTest'
                        ,height: 'full-120'
                        ,url: common.getUrl('vip_statistic/userRechargeList') //数据接口
                        ,headers:common.getHeader()
                        ,page: true
                        ,limits:[20,50,100,200,500]
                        ,limit:20
                        ,minWidth:1000
                        ,autoWidth:true
                        ,method:'POST'
                        ,cols: [[ //表头
                            {field:'date', minWidth:120,title:'日期'}
                            ,{field:'product_name', minWidth:160,title:'产品名称'}
                            ,{field:'game_name', minWidth:160,title:'子游戏'}
                            ,{field:'user_name', minWidth:110,event:'userinfo',title:'用户名'}
                            ,{field:'uid', minWidth:110,title:'uid'}
                            ,{field:'server_id', minWidth:125,title:'区服id'}
                            ,{field:'server_name', minWidth:130,title:'区服名称'}
                            ,{field:'role_id', minWidth:150,title:'角色ID'}
                            ,{field:'role_name', minWidth:150,title:'角色名称'}
                            ,{field:'ascription_vip_name', minWidth:100,title:'VIP专员'}
                            ,{field:'sumamount', minWidth:120,title:'充值金额'}
                            ,{field:'order_count', minWidth:120,title:'充值次数'}
                            ,{field:'last_record_time', minWidth:120,title:'录单时间'}
                            ,{minWidth:170, align:'center', fixed: 'right', title:'操作'
                                ,templet:function(d){
                                    let str = '';
                                     if(d.action && d.action.length>0){
                                         $.each(d.action,function(k,v){
                                              str+= action(v);
                                         })
                                     }
                                    return str;
                                }
                            }
                        ]]
                        ,done:function(a,b,c){
                            lay_page = b;
                            if(c > 0){
                                console.log(a.res_count);
                                var res_count = a.res_count;
                                $('#people_count').html('人数：'+ res_count.people_count);
                                $('#sum_pay').html('充值金额：'+ res_count.sum_pay);
                            }else {
                                $('#people_count').html('人数：'+ 0);
                                $('#sum_pay').html('充值金额：'+ 0);
                            }
                        }
                    });

                    form.render();
                }
            });
        }

    });
    //给子级调用
    function res_msg(msg){
        layer.msg(msg,{icon:1});
        setTimeout(function(){
            // window.location.reload();
            console.log(lay_page);
            layui_obj.table.reload('idTest', {
                method: 'post'
                ,where: where
                ,page: {
                    curr: lay_page
                }
            });
        },1000);
    }
    function action(action,data){
        let str = '';
        switch (action) {
            case 'rebate':
                 str = '<a class="layui-btn layui-btn-danger layui-btn-xs" lay-event="rebate">添加返利</a>';
                break;
            case 'disabledRebate':
                str = '<a type="button" class="layui-btn layui-btn-danger  layui-btn-disabled layui-btn-xs">添加返利</a>';
                break;
            case 'details':
                str = '<a class="layui-btn layui-btn-xs" lay-event="details">列表|审核</a>';
                break;
            default:

                break;
        }
        return str;
    }
</script>
</body>
</html>