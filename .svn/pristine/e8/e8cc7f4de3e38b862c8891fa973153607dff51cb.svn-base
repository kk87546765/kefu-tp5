<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8"/>
    <meta name="renderer" content="webkit">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <meta name="apple-mobile-web-app-status-bar-style" content="black">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="format-detection" content="telephone=no">
    <title>后台管理系统</title>
    <link rel="stylesheet" href="/assets/vendor/layui/css/layui.css"/>
    <link rel="stylesheet" href="/assets/model/common/css/style.css"/>
    <link rel="stylesheet" href="/assets/model/common/css/common.css"/>
    <script type="text/javascript" src="/assets/vendor/layui/layui.js"></script>
    <!--[if lt IE 9]>
    <script src="/assets/model/common/js/html5shiv.min.js"></script>
    <script src="/assets/model/common/js/respond.min.js"></script>
    <![endif]-->
</head>
<style>
    .laytable-cell-checkbox .layui-disabled.layui-form-checked i {
        background: #fff !important;
    }
</style>
<body>
<div class="lxx_title">基本信息</div>
<div lay-filter="edit-form" style="padding: 12px;"  class="layui-form search_wrap">

    <div class="layui-inline">
        <label class="layui-form-label">平台: </label>
        <div class="layui-input-inline" >
            <input type="text" name="res_platform_id_str" autocomplete="off" class="layui-input" value="">
        </div>
    </div>

    <div class="layui-inline">
        <label class="layui-form-label">用户名: </label>
        <div class="layui-input-inline" >
            <input type="text" name="res_user_name" autocomplete="off" class="layui-input" value="">
        </div>
    </div>

    <div class="layui-inline">
        <label class="layui-form-label">用户ID: </label>
        <div class="layui-input-inline" >
            <input type="text" name="res_uid" autocomplete="off" class="layui-input" value="">
        </div>
    </div>

    <div class="layui-inline">
        <label class="layui-form-label">注册时间: </label>
        <div class="layui-input-inline" >
            <input type="text" name="res_reg_time_str" autocomplete="off" class="layui-input" value="">
        </div>
    </div>

    <div class="layui-inline">
        <label class="layui-form-label">累计充值金额: </label>
        <div class="layui-input-inline" >
            <input type="text" name="res_total_pay" autocomplete="off" class="layui-input" value="">
        </div>
    </div>

    <div class="layui-inline">
        <label class="layui-form-label">绑定手机: </label>
        <div class="layui-input-inline" >
            <input type="text" name="res_mobile" autocomplete="off" class="layui-input" value="">
        </div>
    </div>

    <div class="layui-inline">
        <label class="layui-form-label">角色ID: </label>
        <div class="layui-input-inline" >
            <input type="text" name="res_role_id" autocomplete="off" class="layui-input" value="">
        </div>
    </div>

    <div class="layui-inline">
        <label class="layui-form-label">所属游戏: </label>
        <div class="layui-input-inline" >
            <input type="text" name="user_other_info_product_id_str" autocomplete="off" class="layui-input" value="">
        </div>
    </div>

    <div class="layui-inline">
        <label class="layui-form-label">QQ: </label>
        <div class="layui-input-inline" >
            <input type="text" name="user_other_info_qq_number" autocomplete="off" class="layui-input" value="">
        </div>
    </div>
    <div class="layui-inline">
        <label class="layui-form-label">微信: </label>
        <div class="layui-input-inline" >
            <input type="text" name="user_other_info_wechat" autocomplete="off" class="layui-input" value="">
        </div>
    </div>
    <div class="layui-inline">
        <label class="layui-form-label">性别: </label>
        <div class="layui-input-inline" >
            <input type="text" name="user_other_info_sex_str" autocomplete="off" class="layui-input" value="">
        </div>
    </div>
    <div class="layui-inline">
        <label class="layui-form-label">生日: </label>
        <div class="layui-input-inline" >
            <input type="text" name="user_other_info_birthday" autocomplete="off" class="layui-input" value="">
        </div>
    </div>

    <div class="layui-inline">
        <label class="layui-form-label">电话: </label>
        <div class="layui-input-inline" >
            <input type="text" name="user_other_info_mobile" autocomplete="off" class="layui-input" value="">
        </div>
    </div>

</div>
<div class="lxx_title">历史游戏信息</div>
<div class="table_wrap" style="padding: 0 15px;">
    <table id="idTest" class="layui-table"></table>
</div>

<div class="lxx_title">工单列表</div>
<div class="layui-btn-group demoTable" style="padding: 0 15px;">
    <span class="layui-power" id="Vip-sellWorkOrderAdd">
    
    </span>
</div>
<div class="table_wrap" style="padding: 0 15px;">
    <table id="idTest2" lay-filter="demo" class="layui-table"></table>
</div>

<script>

    var user_recharge_info_id = 0;
    var where = {};
    where.is_all = 1;
    where.add_time_start = '';

    var layui_obj = layui.config({
        version: true,
        base: '/assets/model/'
    }).extend({
        common: 'common/js/common',
    }).use(['common','jquery','table','form','laydate'], function(){
        var table   = layui.table;
        var form = layui.form;
        var laydate = layui.laydate;

        var $ = layui.jquery;
        var common = layui.common;

        initData();
        
        var list_url = 'vip/sellWorkOrderList';
        
        //监听工具条
        table.on('tool(demo)', function(obj){
            var data = obj.data;
            if(obj.event === 'detail'){
                var title='编辑';
                var url = 'sell_work_order_detail.html?id='+data.id;

                layer.open({
                    type: 2,
                    title: title+'详情',
                    maxmin: true,
                    shadeClose: true, //点击遮罩关闭层
                    area : ['70%' , '70%'],
                    content: url
                });
            }
        });

        

        function initData(){

            common.initPowerShow([
                'Vip-sellWorkOrderAdd'
            ]);

            user_recharge_info_id = common.urlParam.id

            common.req({
                url: 'vip/sellWorkOrderInfo' //获取游戏名称
                ,data:{'id':user_recharge_info_id}
                ,success:function(json)
                {
                    var base_config = json.data.config;
                    var detail = json.data.detail;

                    $.each(base_config.type_arr,function(k,v){
                        $('#Vip-sellWorkOrderAdd').append('<button class="layui-btn layui-btn-sm" data-type="add" data-val="'+k+'">新建'+v+'工单</button>');
                    });

                    $('.demoTable .layui-btn').on('click', function(){
                        var type = $(this).data('type');
                        if( type=='add' ){
                            //添加
                            var val = $(this).data('val');
                            var url =  "sell_work_order_detail.html?user_recharge_info_id="+user_recharge_info_id;
                            url+="&type="+val;
                            let thisindex = layer.open({
                                type: 2,
                                title: "添加",
                                maxmin: true,
                                shadeClose: true, //点击遮罩关闭层
                                area : ['70%' , '70%'],
                                content: url
                            });
                            layer.full(thisindex);
                        }
                    });

                    where.uid = detail.res_uid;
                    where.platform_id = detail.res_platform_id;

                    form.val('edit-form',detail)

                    table.render({
                        elem: '#idTest'
                        ,height: 'full-120'
                        ,data: json.data.history_order //数据接口
                        ,minWidth:1000
                        ,height:300
                        ,cols: [[ //表头
                            {field:'product_name', minWidth:80, title:'游戏名'}
                            ,{field:'role_name', minWidth:80, title:'角色名'}
                            ,{field:'server_name', minWidth:80, title:'区服'}
                            ,{field:'amount_count_sum', minWidth:50, title:'历史累充'}
                            ,{field:'pay_time_str', minWidth:150, title:'最近充值时间'}
                            ,{field:'login_time_str', minWidth:150, title:'最近登录时间'}
                        ]]
                    });

                    table.render({
                        elem: '#idTest2'
                        ,height: 'full-120'
                        ,url: common.getUrl(list_url) //数据接口
                        ,headers:common.getHeader()
                        ,page: true //开启分页
                        ,limits:[20,50,100,200,500]
                        ,limit:20
                        ,minWidth:800
                        ,autoWidth:true
                        ,where:where
                        ,method:'post'
                        ,cols: [[ //表头
                            {field:'id', minWidth:50, sort: true, title:'ID'}
                            ,{field:'type_str', minWidth:80, title:'工单类型'}
                            ,{field:'kf_id_str', minWidth:50, title:'VIP专员'}
                            ,{field:'product_id_str', minWidth:150, title:'游戏'}
                            ,{field:'add_time', minWidth:150, title:'录单时间'}
                            ,{field:'pay_time_str', minWidth:150, title:'成交时间'}
                            ,{field:'status_str', minWidth:50, title:'审核状态'}
                            ,{field:'sell_amount', minWidth:50, title:'订单金额'}
                            ,{minWidth:80, align:'center', fixed: 'right', title:'操作'
                            ,templet:function(d){
                                    let str = '';
                                    if(d.action && d.action.length>0){
                                        $.each(d.action,function(k,v){
                                            str+= action(v);
                                        })
                                    }
                                    return str;
                                }
                            }
                        ]]
                    });
                    
                    form.render();
                }
            });
        }
        
    });
    //给子级调用
    function res_msg(msg){
        layer.msg(msg,{icon:1});
        setTimeout(function(){
            window.location.reload();
        },1000);
    }

    function action(action,data){
        let str = '';
        switch (action) {
            case 'sellWorkOrderDetail':
                str = '<a class="layui-btn layui-btn-xs" lay-event="detail">详情</a>';
                break;
            
            default:

                break;
        }

        return str;
    }
</script>
</body>
</html>