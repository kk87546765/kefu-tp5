<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8"/>
    <meta name="renderer" content="webkit">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <meta name="apple-mobile-web-app-status-bar-style" content="black">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="format-detection" content="telephone=no">
    <title>后台管理系统</title>
    <link rel="stylesheet" href="/assets/vendor/layui/css/layui.css"/>
    <link rel="stylesheet" href="/assets/model/common/css/style.css"/>
    <link rel="stylesheet" href="/assets/model/common/css/common.css"/>
    <script type="text/javascript" src="/assets/vendor/layui/layui.js"></script>
    <!--[if lt IE 9]>
    <script src="/assets/model/common/js/html5shiv.min.js"></script>
    <script src="/assets/model/common/js/respond.min.js"></script>
    <![endif]-->
</head>
<body class="hold-transition skin-blue sidebar-mini">
    <form class="layui-form" lay-filter="edit-form" action="" style="padding: 20px;">
        <div class="layui-form-item">
            <label class="layui-form-label">游戏</label>
            <div class="layui-input-inline">
                <select name="game_product_id" lay-filter="game_product_id">
                    <option value="0">默认</option>
                </select>
            </div>
        </div>
        <div class="layui-form-item">
            <label class="layui-form-label">金额下限</label>
            <div class="layui-input-inline">
                <input type="number" min="0" name="money_min" lay-verify="min0" value="" autocomplete="off" class="layui-input">
            </div>
        </div>
        <div class="layui-form-item">
            <label class="layui-form-label">金额上限</label>
            <div class="layui-input-inline">
                <input type="number" min="0" name="money_max" lay-verify="min0" value="" autocomplete="off" class="layui-input">
            </div>
        </div>
        <div class="layui-form-item">
            <label class="layui-form-label">提成比例(%)</label>
            <div class="layui-input-inline">
                <input type="number" min="0" name="commission_rate" lay-verify="min0|need_one" value="" autocomplete="off" class="layui-input need_one">
            </div>
        </div>
        <div class="layui-form-item">
            <label class="layui-form-label">提成(元)</label>
            <div class="layui-input-inline">
                <input type="number" min="0" name="commission_num" lay-verify="min0|need_one" value="" autocomplete="off" class="layui-input need_one">
            </div>
        </div>
        <div class="layui-form-item">
            <label class="layui-form-label">执行时间</label>
            <div class="layui-input-inline">
                <input type="text" name="start_time" lay-verify="required"  value="" id="start_time" autocomplete="off" class="layui-input">
            </div>
        </div>
        <div class="layui-form-item">
            <label class="layui-form-label">结束时间</label>
            <div class="layui-input-inline">
                <input type="text" name="end_time" lay-verify="required" value="" id="end_time" autocomplete="off" class="layui-input">
            </div>
        </div>
        <div class="layui-form-item p_menu p_lev1">
            <label class="layui-form-label">状态</label>
            <div class="layui-input-inline">
                <input type="radio" name="status" value="1" title="开启" >
                <input type="radio" name="status" value="2" title="不启用" >
            </div>
        </div>

        <div class="layui-form-item p_menu p_lev1">
            <label class="layui-form-label">备注</label>
            <div class="layui-input-inline">
                <textarea name="desc">
                    
                </textarea>
            </div>
        </div>

        <input type="hidden" name="id" value="">
        <div class="layui-form-item">
            <div class="layui-input-block">
              <button type="submit" class="layui-btn layui-power" id="VipConfig-sellerCommissionConfigEdit" lay-submit="" lay-filter="submit_btn">修改</button>
            </div>
        </div>
        <div class="layui-form-item">
            <div class="layui-input-block">
              <button type="submit" class="layui-btn layui-power" id="VipConfig-sellerCommissionConfigAdd" lay-submit="" lay-filter="submit_btn">立即提交</button>
            </div>
        </div>
    </form>

<script>
var layui_obj = layui.config({
    version: true,
    base: '/assets/model/'
}).extend({
    common: 'common/js/common',
}).use(['common','jquery','form','laydate'], function(){
    var form = layui.form;
    var laydate = layui.laydate;
    var $ = layui.jquery;
    var common = layui.common;
    var id = common.urlParam.id?common.urlParam.id:0;
    var p_url = 'vip_config/sellerCommissionConfigAdd';

    //日期
    laydate.render({
        elem: '#start_time',
        trigger : 'click',
        type: 'datetime'
    });

    //日期
    laydate.render({
        elem: '#end_time',
        trigger : 'click',
        type: 'datetime'
    });

    initData();

    //监听提交
    form.on('submit(submit_btn)', function(data){

        common.req({
            url: p_url,
            data: data.field,
            type: "post",
            dataType:"json",
            success:function(res){
                console.log(res);
                if( res.code==0 ){
                    var index = parent.layer.getFrameIndex(window.name);
                    window.parent.res_msg(res.msg);
                    parent.layer.close(index);//关闭当前页
                    //window.parent.location.reload(); //刷新父窗口
                }else{
                    layer.msg(res.msg,{icon:2});
                }
            },
            error:function(res){
                layer.alert('错误'+res.msg,{icon:2});
            }
        });
        return false;
    });

    form.verify({
        gt0:function(val,item){
            if(val<=0){
                return '请填写';
            }
        },
        min0:function(value, item){
            console.log(typeof(value))
            console.log(value);
            if(!value){
                return false;
            }

            if(!(/^[\d\.]{1,}$/.test(value)) ){
              return '必须为正数';
            }
        },
        need_one:function(value, item){

            if(value){
                return false;
            }

            var obj = $('.need_one');

            var flag = 0;

            $.each(obj,function(k,v){
                if($(v).val()){
                    flag++;
                }
            })

            if(!flag ){
              return '提成比例或提成必须填一个';
            }
        },
    });

    function initData(){
        common.req({
            url: 'vip_config/sellerCommissionConfigDetail',
            data: {'id':id},
            type: "post",
            dataType:"json",
            success:function(res){
                
                if( res.code==0 ){

                    common.isLoading(false);

                    var base_config = res.data.config;
                    var form_data = res.data.detail;

                    $.each(base_config.game_list,function(k,v){
                        $('select[name=game_product_id]').append('<option value="'+v.id+'">'+v.name+'</option>');
                    });

                    if(form_data.id > 0){
                        p_url = 'vip_config/sellerCommissionConfigEdit';
                        //初始化权限显示
                        common.initPowerShow(['VipConfig-sellerCommissionConfigEdit']);
                        form.val('edit-form',form_data);

                    }else{
                        //初始化权限显示
                        common.initPowerShow(['VipConfig-sellerCommissionConfigAdd']);
                    }

                    form.render();

                }else{
                    layer.alert('错误'+res.msg,{icon:2});
                }
            },
            error:function(res){
                layer.alert('错误'+res.msg,{icon:2});
            }
        });
    }
});

</script>
</body>
</html>