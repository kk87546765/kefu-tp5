<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8"/>
    <meta name="renderer" content="webkit">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <meta name="apple-mobile-web-app-status-bar-style" content="black">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="format-detection" content="telephone=no">
    <title>后台管理系统</title>
    <link rel="stylesheet" href="/assets/vendor/layui/css/layui.css"/>
    <link rel="stylesheet" href="/assets/model/common/css/style.css"/>
    <link rel="stylesheet" href="/assets/model/common/css/common.css"/>
    <script type="text/javascript" src="/assets/vendor/layui/layui.js"></script>
    <!--[if lt IE 9]>
    <script src="/assets/model/common/js/html5shiv.min.js"></script>
    <script src="/assets/model/common/js/respond.min.js"></script>
    <![endif]-->
    <style>
        .layui-col-space15 {
            /* margin: -7.5px; */
            margin:-7.5px 0 !important;
        }
    </style>
</head>
<body class="hold-transition skin-blue sidebar-mini">
    <!-- Main content -->
    <div style="padding: 12px 15px;" class="layui-btn-group demoTable">
        <div id="Sysmanage-menuAdd" class="layui-power">
            <button type="button" id="menuAdd"  class="layui-btn  layui-btn-sm " >添加菜单</button>
            <span style="display: inline-block; font-size: 14px; line-height: 30px; margin-left: 12px; vertical-align: middle; color: red;">点击菜单名称可编辑！</span>
        </div>
        
    </div>
    <div id="menu_list" class="demo-tree demo-tree-box" style="padding: 20px; margin: 0 15px; border: 1px solid #aaa;"></div>
    <!-- 加载动画 -->
    <div class="page-loading">
        <div class="ball-loader">
            <span></span><span></span><span></span><span></span>
        </div>
    </div>
</body>
<script>
    var click_name = 'sysmanage_menu_click_id';
    var action = [];

    var layui_obj = layui.config({
        version: true,
        base: '/assets/model/'
    }).extend({
        common: 'common/js/common',
    }).use(['common','jquery','tree'], function(){
        var $ = layui.jquery;
        var tree = layui.tree;
        var common = layui.common;

        var detail_url = '/view/sysmanage/menu_detail.html';

        /*初始化*/
        common.initPowerShow(['Sysmanage-menuAdd']);//初始化权限显示
        initData();//初始化页面数据

        /*绑定事件*/
        //添加菜单
        $('#menuAdd').on('click', function(){
            layer.open({
                type: 2,
                title: "添加菜单",
                maxmin: true,
                shadeClose: true, //点击遮罩关闭层
                area : ['80%' , '70%'],
                content: detail_url
            });
        });
        
        /*函数*/
        function initData(){

            if(common.hasPower('Sysmanage-menuAdd')){
                action.push({'type':'menuAdd','icon':'layui-icon-add-1','title':'添加'})
            }

            if(common.hasPower('Sysmanage-menuDetail')){
                action.push({'type':'menuDetail','icon':'layui-icon-edit','title':'编辑'})
            }

            if(common.hasPower('Sysmanage-menuCopyDetail')){
                action.push({'type':'menuCopyDetail','icon':'layui-icon-file-b','title':'复制'})
            }

            if(common.hasPower('Sysmanage-menuPowerRole')){
                action.push({'type':'menuPowerRole','icon':'layui-icon-auz','title':'授权'})
            }

            if(common.hasPower('Sysmanage-menuDel')){
                action.push({'type':'menuDel','icon':'layui-icon-delete','title':'删除'})
            }
            
            var click_id = common.getTempData(click_name);

            common.req({
                url: 'Sysmanage/menuList' //获取游戏名称
                ,data: {'click_id':click_id}
                ,async:false
                ,success:function(json)
                {
                    if (json.code == 0) {

                        tree.render({
                            elem: '#menu_list'
                            ,id: 'menu_list'
                            ,data: json.data
                            ,edit: action //操作节点的图标
                            ,onlyIconControl:2
                            ,click: function(obj){
                                var data = obj.data; //得到当前节点的数据
                                    id   = data.id;
                                change(id,obj.state);
                            }
                            ,operate: function(obj){ //操作事件
                                var type = obj.type; //得到操作类型：add、edit、del
                                    data = obj.data; //得到当前节点的数据
                                    id   = data.id;
                                if( type=="menuDel" ){
                                    common.req({
                                        url: "Sysmanage/menuDel",
                                        data: { id: id },
                                        type: 'post',
                                        dataType: 'json',
                                        success: function(res){
                                            if( res.code==0 ){
                                                res_msg(res.msg);
                                            }else{
                                                layer.alert(res.msg,{icon:2});
                                            }
                                        },
                                        error: function(res){
                                            layer.alert("网络繁忙，请刷新重新操作！",{icon:2});
                                        }
                                    });
                                }else if(type == 'menuAdd'){
                                    
                                    if(data.type==2){
                                        layer.alert('接口不支持下级菜单');
                                        return false;
                                    }
                                    layer.open({
                                        type: 2,
                                        title: "添加",
                                        maxmin: true,
                                        shadeClose: true, //点击遮罩关闭层
                                        area : ['80%' , '60%'],
                                        content: detail_url+"?p_id="+id
                                    });
                                }else if(type == 'menuDetail'){
                                    layer.open({
                                        type: 2,
                                        title: "修改",
                                        maxmin: true,
                                        shadeClose: true, //点击遮罩关闭层
                                        area : ['80%' , '60%'],
                                        content: detail_url+"?id="+id
                                    });
                                }else if(type == 'menuCopyDetail'){
                                    layer.open({
                                        type: 2,
                                        title: "添加(复制)",
                                        maxmin: true,
                                        shadeClose: true, //点击遮罩关闭层
                                        area : ['80%' , '60%'],
                                        content: detail_url+"?id="+id+'&copy=1'
                                    });
                                }else if( type=="menuPowerRole" ){

                                    if(data.p_id == 0){
                                        layer.msg('一级菜单不需授权');
                                        return false;
                                    }
                                    layer.open({
                                        type: 2,
                                        title: "角色授权",
                                        maxmin: true,
                                        shadeClose: true, //点击遮罩关闭层
                                        area : ['100%' , '100%'],
                                        content: "menu_power_role.html?menu_id="+id
                                    });
                                }

                                return false;
                                //Ajax 操作
                            }
                        });   
                    }
                    common.isLoading(false);
                }
            }); 
        }

        function change(id,type){
            var this_arr = common.getTempData(click_name);

            if(typeof this_arr != 'object'){
                this_arr = [];
            }
            this_arr = common.arrRemove(this_arr,id);

            if(type=='open'){
                this_arr.push(id);
            }

            common.putTempData(click_name,this_arr);
        }
    });

    //给子级调用
    function res_msg(msg){
        layer.msg(msg,{icon:1});
        setTimeout(function(){
            window.location.reload();
        },1000);
    }
</script>
</html>